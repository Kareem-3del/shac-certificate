<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <title>Certificates - Admin Panel</title>
  <link href="https://cdn.jsdelivr.net/npm/tailwindcss@2.2.19/dist/tailwind.min.css" rel="stylesheet">
  <link href="https://fonts.googleapis.com/css2?family=Inter:wght@300;400;500;600;700&display=swap" rel="stylesheet">
  <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.0.0/css/all.min.css">
  
  <style>
    :root {
      --color-primary: 59 130 246;
      --color-secondary: 99 102 241;
      --color-accent: 34 197 94;
      --color-background: 249 250 251;
      --color-surface: 255 255 255;
    }
    
    * {
      font-family: "Inter", sans-serif;
    }
    
    .card-hover {
      transition: all 0.3s ease;
    }
    
    .card-hover:hover {
      transform: translateY(-2px);
      box-shadow: 0 8px 25px rgba(0,0,0,0.15);
    }
    
    .gradient-bg {
      background: linear-gradient(135deg, rgb(var(--color-primary)) 0%, rgb(var(--color-secondary)) 100%);
    }

    .nav-active {
      color: rgb(37 99 235);
      background-color: rgb(219 234 254);
      border-right: 2px solid rgb(37 99 235);
    }
    
    .animate-fade-in {
      animation: fadeIn 0.6s ease-out;
    }
    
    @keyframes fadeIn {
      from { opacity: 0; transform: translateY(20px); }
      to { opacity: 1; transform: translateY(0); }
    }
    
    .stat-card {
      background: linear-gradient(135deg, rgb(var(--color-surface)) 0%, rgb(248 250 252) 100%);
      border: 1px solid rgb(226 232 240);
    }
    
    .nav-item {
      transition: all 0.2s ease;
    }
    
    .nav-item:hover {
      background-color: rgb(241 245 249);
      border-left: 4px solid rgb(var(--color-primary));
    }
    
    .nav-item.active {
      background-color: rgb(239 246 255);
      border-left: 4px solid rgb(37 99 235);
      color: rgb(29 78 216);
    }
  </style>
</head>
<body class="min-h-screen" style="background-color: rgb(var(--color-background))">
  <!-- Top Navigation -->
  <nav class="shadow-sm border-b fixed w-full top-0 z-50" style="background-color: rgb(var(--color-surface)); border-color: rgb(229 231 235)">
    <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8">
      <div class="flex justify-between h-16">
        <div class="flex items-center">
          <img class="h-8 w-auto" src="https://shacpr.org.sa/images/sha.png" alt="SHA Logo">
          <div class="ml-4">
            <h1 class="text-xl font-semibold text-gray-900">Admin Dashboard</h1>
          </div>
        </div>
        
        <div class="flex items-center space-x-4">
          <div class="flex items-center space-x-2">
            <div class="w-2 h-2 bg-green-400 rounded-full animate-pulse"></div>
            <span class="text-sm text-gray-500">Live</span>
          </div>
          <div class="text-sm text-gray-600">
            <i class="fas fa-calendar mr-1"></i>
            <span id="currentDate"></span>
          </div>
          <a href="/" class="text-gray-600 hover:text-gray-900 px-3 py-2 rounded-md text-sm font-medium">
            <i class="fas fa-home mr-1"></i>Main Site
          </a>
          <a href="/auth/logout" class="bg-red-600 hover:bg-red-700 text-white px-4 py-2 rounded-md text-sm font-medium">
            <i class="fas fa-sign-out-alt mr-1"></i>Logout
          </a>
        </div>
      </div>
    </div>
  </nav>

  <div class="flex pt-16">
    <!-- Sidebar -->
    <nav class="w-64 min-h-screen shadow-lg" style="background-color: rgb(var(--color-surface))">
      <div class="p-6">
        <div class="flex items-center space-x-3">
          <img class="h-8 w-8" src="https://shacpr.org.sa/images/sha.png" alt="SHA Logo">
          <h1 class="text-xl font-bold gradient-bg bg-clip-text text-transparent">Admin Dashboard</h1>
        </div>
      </div>
      
      <ul class="mt-6 px-4 space-y-1">
        <!-- Main Navigation -->
        <li>
          <a href="/dashboard" class="flex items-center px-4 py-3 text-sm font-medium text-gray-700 hover:bg-blue-50 hover:text-blue-600 transition-colors rounded-lg">
            <i class="fas fa-tachometer-alt w-5 h-5 mr-3"></i>
            Dashboard Overview
          </a>
        </li>
        
        <!-- Analytics Section -->
        <li class="pt-4">
          <div class="px-4 text-xs font-semibold text-gray-400 uppercase tracking-wider mb-2">Analytics</div>
        </li>
        <li>
          <a href="/dashboard/transactions" class="flex items-center px-4 py-3 text-sm font-medium text-gray-700 hover:bg-blue-50 hover:text-blue-600 transition-colors rounded-lg">
            <i class="fas fa-credit-card w-5 h-5 mr-3"></i>
            Transactions
          </a>
        </li>

        <!-- Management Section -->
        <li class="pt-4">
          <div class="px-4 text-xs font-semibold text-gray-400 uppercase tracking-wider mb-2">Management</div>
        </li>
        <li>
          <a href="/dashboard/certificates" class="flex items-center px-4 py-3 text-sm font-medium text-gray-700 hover:bg-blue-50 hover:text-blue-600 transition-colors rounded-lg nav-active">
            <i class="fas fa-certificate w-5 h-5 mr-3"></i>
            Certificates
          </a>
        </li>
        <li>
          <a href="/dashboard/users" class="flex items-center px-4 py-3 text-sm font-medium text-gray-700 hover:bg-blue-50 hover:text-blue-600 transition-colors rounded-lg">
            <i class="fas fa-users w-5 h-5 mr-3"></i>
            User Management
          </a>
        </li>
        <li>
          <a href="/dashboard/subscriptions" class="flex items-center px-4 py-3 text-sm font-medium text-gray-700 hover:bg-blue-50 hover:text-blue-600 transition-colors rounded-lg">
            <i class="fas fa-crown w-5 h-5 mr-3"></i>
            Subscriptions
          </a>
        </li>
        <li>
          <a href="/dashboard/templates" class="flex items-center px-4 py-3 text-sm font-medium text-gray-700 hover:bg-blue-50 hover:text-blue-600 transition-colors rounded-lg">
            <i class="fas fa-file-alt w-5 h-5 mr-3"></i>
            Certificate Templates
          </a>
        </li>

        <!-- System Section -->
        <li class="pt-4">
          <div class="px-4 text-xs font-semibold text-gray-400 uppercase tracking-wider mb-2">System</div>
        </li>
        <li>
          <a href="/dashboard/settings" class="flex items-center px-4 py-3 text-sm font-medium text-gray-700 hover:bg-blue-50 hover:text-blue-600 transition-colors rounded-lg">
            <i class="fas fa-cog w-5 h-5 mr-3"></i>
            System Settings
          </a>
        </li>
        <li>
          <a href="/dashboard/email" class="flex items-center px-4 py-3 text-sm font-medium text-gray-700 hover:bg-blue-50 hover:text-blue-600 transition-colors rounded-lg">
            <i class="fas fa-envelope w-5 h-5 mr-3"></i>
            Bulk Email
          </a>
        </li>
        <li>
          <a href="/dashboard/audit" class="flex items-center px-4 py-3 text-sm font-medium text-gray-700 hover:bg-blue-50 hover:text-blue-600 transition-colors rounded-lg">
            <i class="fas fa-clipboard-list w-5 h-5 mr-3"></i>
            Audit Logs
          </a>
        </li>
      </ul>
      
      <!-- User Info Section at Bottom -->
      <div class="absolute bottom-0 left-0 right-0 p-6 border-t" style="border-color: rgb(229 231 235)">
        <div class="flex items-center space-x-3">
          <div class="w-10 h-10 rounded-full gradient-bg flex items-center justify-center">
            <span class="text-white text-sm font-medium"><%= user.username.charAt(0).toUpperCase() %></span>
          </div>
          <div class="flex-1">
            <p class="text-sm font-medium text-gray-900"><%= user.username %></p>
            <p class="text-xs capitalize" style="color: rgb(107 114 128)"><%= user.role %></p>
          </div>
          <a href="/logout" class="text-gray-400 hover:text-gray-600">
            <svg class="w-5 h-5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M17 16l4-4m0 0l-4-4m4 4H7m6 4v1a3 3 0 01-3 3H6a3 3 0 01-3-3V7a3 3 0 013-3h4a3 3 0 013 3v1"></path>
            </svg>
          </a>
        </div>
      </div>
    </nav>

    <!-- Main Content -->
    <div class="flex-1 p-8">
      <!-- Page Header -->
      <div class="mb-8">
        <nav class="mb-4">
          <ol class="flex space-x-2 text-sm text-gray-500">
            <li><a href="/dashboard" class="hover:text-gray-700">Dashboard</a></li>
            <li><span class="mx-2">/</span></li>
            <li class="text-gray-900">Certificates</li>
          </ol>
        </nav>
        
        <div class="flex items-center justify-between">
          <div>
            <h1 class="text-2xl font-bold text-gray-900">Certificates</h1>
            <p class="mt-1 text-sm text-gray-600">Manage and track certificates</p>
          </div>
        </div>
      </div>

      <!-- Stats Cards -->
      <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-4 gap-6 mb-8">
        <div class="bg-white rounded-xl shadow-sm p-6 card-hover transition-all duration-300">
          <div class="flex items-center">
            <div class="flex-shrink-0">
              <div class="w-8 h-8 bg-green-100 rounded-lg flex items-center justify-center">
                <svg class="w-5 h-5 text-green-600" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 12l2 2 4-4m6 2a9 9 0 11-18 0 9 9 0 0118 0z"></path>
                </svg>
              </div>
            </div>
            <div class="ml-4">
              <p class="text-sm font-medium text-gray-500">Total Active</p>
              <p class="text-2xl font-bold text-gray-900"><%= certificates.total %></p>
            </div>
          </div>
        </div>

        <div class="bg-white rounded-xl shadow-sm p-6 card-hover transition-all duration-300">
          <div class="flex items-center">
            <div class="flex-shrink-0">
              <div class="w-8 h-8 bg-blue-100 rounded-lg flex items-center justify-center">
                <svg class="w-5 h-5 text-blue-600" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 6v6m0 0v6m0-6h6m-6 0H6"></path>
                </svg>
              </div>
            </div>
            <div class="ml-4">
              <p class="text-sm font-medium text-gray-500">Generated This Month</p>
              <p class="text-2xl font-bold text-gray-900"><%= certificates.currentPeriod %></p>
            </div>
          </div>
        </div>

        <div class="bg-white rounded-xl shadow-sm p-6 card-hover transition-all duration-300">
          <div class="flex items-center">
            <div class="flex-shrink-0">
              <div class="w-8 h-8 bg-purple-100 rounded-lg flex items-center justify-center">
                <svg class="w-5 h-5 text-purple-600" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M13 7h8m0 0v8m0-8l-8 8-4-4-6 6"></path>
                </svg>
              </div>
            </div>
            <div class="ml-4">
              <p class="text-sm font-medium text-gray-500">Growth</p>
              <p class="text-2xl font-bold text-gray-900">
                <%= certificates.growth >= 0 ? '+' : '' %><%= certificates.growth %>
              </p>
            </div>
          </div>
        </div>

        <div class="bg-white rounded-xl shadow-sm p-6 card-hover transition-all duration-300">
          <div class="flex items-center">
            <div class="flex-shrink-0">
              <div class="w-8 h-8 bg-orange-100 rounded-lg flex items-center justify-center">
                <svg class="w-5 h-5 text-orange-600" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 8v4l3 3m6-3a9 9 0 11-18 0 9 9 0 0118 0z"></path>
                </svg>
              </div>
            </div>
            <div class="ml-4">
              <p class="text-sm font-medium text-gray-500">Previous Month</p>
              <p class="text-2xl font-bold text-gray-900"><%= certificates.previousPeriod %></p>
            </div>
          </div>
        </div>
      </div>

      <!-- Chart Section -->
      <div class="grid grid-cols-1 lg:grid-cols-2 gap-8">
        <!-- Certificates Chart -->
        <div class="bg-white rounded-xl shadow-sm p-6 card-hover transition-all duration-300">
          <div class="flex items-center justify-between mb-6">
            <h3 class="text-lg font-semibold text-gray-900">Certificate Generation Trend</h3>
            <div class="flex space-x-2">
              <button class="px-3 py-1 text-xs font-medium text-blue-600 bg-blue-100 rounded-full">30 Days</button>
            </div>
          </div>
          <div style="height: 300px; max-height: 300px;">
            <canvas id="certificatesChart"></canvas>
          </div>
        </div>

        <!-- Quick Actions -->
        <div class="bg-white rounded-xl shadow-sm p-6 card-hover transition-all duration-300">
          <h3 class="text-lg font-semibold text-gray-900 mb-6">Quick Actions</h3>
          <div class="space-y-4">
            <a href="/dashboard/certificates/list" class="flex items-center justify-between p-4 border border-gray-200 rounded-lg hover:bg-gray-50 transition-colors">
              <div class="flex items-center">
                <div class="w-8 h-8 bg-blue-100 rounded-lg flex items-center justify-center mr-3">
                  <svg class="w-4 h-4 text-blue-600" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 12l2 2 4-4m6 2a9 9 0 11-18 0 9 9 0 0118 0z"></path>
                  </svg>
                </div>
                <div>
                  <p class="font-medium text-gray-900">View All Certificates</p>
                  <p class="text-sm text-gray-500">Manage and download certificates</p>
                </div>
              </div>
              <svg class="w-5 h-5 text-gray-400" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 5l7 7-7 7"></path>
              </svg>
            </a>

            <a href="/certificates/generate" class="flex items-center justify-between p-4 border border-gray-200 rounded-lg hover:bg-gray-50 transition-colors">
              <div class="flex items-center">
                <div class="w-8 h-8 bg-green-100 rounded-lg flex items-center justify-center mr-3">
                  <svg class="w-4 h-4 text-green-600" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 6v6m0 0v6m0-6h6m-6 0H6"></path>
                  </svg>
                </div>
                <div>
                  <p class="font-medium text-gray-900">Generate New Certificate</p>
                  <p class="text-sm text-gray-500">Create a new SSL certificate</p>
                </div>
              </div>
              <svg class="w-5 h-5 text-gray-400" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 5l7 7-7 7"></path>
              </svg>
            </a>

            <a href="/api/analytics/certificates-chart?days=30" target="_blank" class="flex items-center justify-between p-4 border border-gray-200 rounded-lg hover:bg-gray-50 transition-colors">
              <div class="flex items-center">
                <div class="w-8 h-8 bg-purple-100 rounded-lg flex items-center justify-center mr-3">
                  <svg class="w-4 h-4 text-purple-600" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 17v-2m3 2v-4m3 4v-6m2 10H7a2 2 0 01-2-2V5a2 2 0 012-2h5.586a1 1 0 01.707.293l5.414 5.414a1 1 0 01.293.707V19a2 2 0 01-2 2z"></path>
                  </svg>
                </div>
                <div>
                  <p class="font-medium text-gray-900">Export Analytics</p>
                  <p class="text-sm text-gray-500">Download certificate data</p>
                </div>
              </div>
              <svg class="w-5 h-5 text-gray-400" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 5l7 7-7 7"></path>
              </svg>
            </a>
          </div>
        </div>
      </div>

  <script>
    function updateTimestamp() {
      document.getElementById('lastUpdated').textContent = new Date().toLocaleTimeString();
    }
    updateTimestamp();

    // Certificates Chart
    const ctx = document.getElementById('certificatesChart').getContext('2d');
    new Chart(ctx, {
      type: 'line',
      data: {
        labels: <%- JSON.stringify(chartData.labels) %>,
        datasets: [{
          label: 'Certificates Generated',
          data: <%- JSON.stringify(chartData.data) %>,
          borderColor: 'rgb(59, 130, 246)',
          backgroundColor: 'rgba(59, 130, 246, 0.1)',
          tension: 0.4,
          fill: true
        }]
      },
      options: {
        responsive: true,
        maintainAspectRatio: false,
        plugins: {
          legend: {
            display: false
          }
        },
        scales: {
          y: {
            beginAtZero: true,
            grid: {
              color: 'rgba(0, 0, 0, 0.1)'
            }
          },
          x: {
            grid: {
              display: false
            }
          }
        }
      }
    });

    // Update current date
    const now = new Date();
    const dateString = now.toLocaleDateString('en-US', {
      weekday: 'long',
      year: 'numeric', 
      month: 'long',
      day: 'numeric'
    });
    const dateElement = document.getElementById('currentDate');
    if (dateElement) {
      dateElement.textContent = dateString;
    }

    // Auto refresh every 5 minutes
    setInterval(() => {
      location.reload();
    }, 300000);
  </script>

</body>
</html>