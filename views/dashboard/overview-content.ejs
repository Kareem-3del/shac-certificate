<!-- KPI Cards Section -->
<div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-4 gap-6 mb-8">
    <!-- Revenue Card -->
    <div class="stat-card rounded-xl shadow-sm p-6 card-hover" style="background-color: rgb(var(--color-surface))">
        <div class="flex items-center justify-between">
            <div>
                <p class="text-sm font-medium text-gray-600">Revenue</p>
                <p class="text-3xl font-bold text-green-600" id="totalRevenue">$<%= Number(overview.revenue.total).toFixed(2) %></p>
                <p class="text-xs text-gray-500 mt-1">
                    <span class="<%= overview.revenue.growth >= 0 ? 'text-green-500' : 'text-red-500' %>" id="revenueGrowth">
                        <%= overview.revenue.growth >= 0 ? '+' : '' %><%= Number(overview.revenue.growth).toFixed(1) %>%
                    </span> vs last period
                </p>
            </div>
            <div class="bg-green-100 p-3 rounded-full">
                <svg class="w-6 h-6 text-green-600" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 8c-1.657 0-3 .895-3 2s1.343 2 3 2 3 .895 3 2-1.343 2-3 2m0-8c1.11 0 2.08.402 2.599 1M12 8V7m0 1v8m0 0v1m0-1c-1.11 0-2.08-.402-2.599-1"></path>
                </svg>
            </div>
        </div>
    </div>

    <!-- Certificates Card -->
    <div class="stat-card rounded-xl shadow-sm p-6 card-hover" style="background-color: rgb(var(--color-surface))">
        <div class="flex items-center justify-between">
            <div>
                <p class="text-sm font-medium text-gray-600">Certificates</p>
                <p class="text-3xl font-bold text-blue-600" id="totalCertificates"><%= overview.certificates.total %></p>
                <p class="text-xs text-gray-500 mt-1">
                    <span class="<%= overview.certificates.growth >= 0 ? 'text-green-500' : 'text-red-500' %>" id="certificatesGrowth">
                        <%= overview.certificates.growth >= 0 ? '+' : '' %><%= overview.certificates.growth %>
                    </span> this month
                </p>
            </div>
            <div class="bg-blue-100 p-3 rounded-full">
                <svg class="w-6 h-6 text-blue-600" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 12l2 2 4-4m5.586-3.414a2 2 0 00-2.828 0l-4.829 4.828a2 2 0 01-2.828 0l-2.828-2.828a2 2 0 00-2.828 0L1 14v5a2 2 0 002 2h14a2 2 0 002-2v-1"></path>
                </svg>
            </div>
        </div>
    </div>

    <!-- Users Card -->
    <div class="stat-card rounded-xl shadow-sm p-6 card-hover" style="background-color: rgb(var(--color-surface))">
        <div class="flex items-center justify-between">
            <div>
                <p class="text-sm font-medium text-gray-600">Users</p>
                <p class="text-3xl font-bold text-purple-600" id="totalUsers"><%= overview.users.total %></p>
                <p class="text-xs text-gray-500 mt-1">
                    <span class="text-green-500" id="usersToday">+<%= overview.users.growth %></span> today
                </p>
            </div>
            <div class="bg-purple-100 p-3 rounded-full">
                <svg class="w-6 h-6 text-purple-600" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 4.354a4 4 0 110 5.292M15 21H3v-1a6 6 0 0112 0v1zm0 0h6v-1a6 6 0 00-9-5.197m13.5-9a2.25 2.25 0 11-4.5 0 2.25 2.25 0 014.5 0z"></path>
                </svg>
            </div>
        </div>
    </div>

    <!-- Ad ROI Card -->
    <div class="stat-card rounded-xl shadow-sm p-6 card-hover" style="background-color: rgb(var(--color-surface))">
        <div class="flex items-center justify-between">
            <div>
                <p class="text-sm font-medium text-gray-600">Ad ROI</p>
                <p class="text-3xl font-bold text-orange-600" id="adROI"><%= overview.advertising.roi %>%</p>
                <p class="text-xs text-gray-500 mt-1">
                    <span class="<%= overview.advertising.trend >= 0 ? 'text-green-500' : 'text-red-500' %>" id="roiTrend">
                        <%= overview.advertising.trend >= 0 ? '+' : '' %><%= overview.advertising.trend %>%
                    </span> vs last period
                </p>
            </div>
            <div class="bg-orange-100 p-3 rounded-full">
                <svg class="w-6 h-6 text-orange-600" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M13 7h8m0 0v8m0-8l-8 8-4-4-6 6"></path>
                </svg>
            </div>
        </div>
    </div>
</div>

<!-- Charts Section -->
<div class="grid grid-cols-1 lg:grid-cols-2 gap-6 mb-8">
    <!-- Revenue Chart -->
    <div class="bg-white rounded-xl shadow-sm p-6 card-hover transition-all duration-300">
        <div class="flex items-center justify-between mb-6">
            <h3 class="text-lg font-semibold text-gray-900">Revenue Trend</h3>
            <div class="flex space-x-2">
                <button class="px-3 py-1 text-xs font-medium text-blue-600 bg-blue-100 rounded-full">30 Days</button>
            </div>
        </div>
        <div style="height: 300px; max-height: 300px;">
            <canvas id="revenueChart"></canvas>
        </div>
    </div>

    <!-- Certificates Chart -->
    <div class="bg-white rounded-xl shadow-sm p-6 card-hover transition-all duration-300">
        <div class="flex items-center justify-between mb-6">
            <h3 class="text-lg font-semibold text-gray-900">Certificate Generation</h3>
            <div class="flex space-x-2">
                <button class="px-3 py-1 text-xs font-medium text-blue-600 bg-blue-100 rounded-full">30 Days</button>
            </div>
        </div>
        <div style="height: 300px; max-height: 300px;">
            <canvas id="certificatesChart"></canvas>
        </div>
    </div>
</div>

<!-- Recent Activity -->
<div class="bg-white rounded-xl shadow-sm p-6 card-hover transition-all duration-300">
    <h3 class="text-lg font-semibold text-gray-900 mb-6">Recent Activity</h3>
    <div class="space-y-4">
        <% if (recentActivity && recentActivity.length > 0) { %>
        <% recentActivity.slice(0, 10).forEach(function(activity) { %>
        <div class="flex items-center space-x-4 p-3 rounded-lg border border-gray-100">
            <div class="flex-shrink-0">
                <div class="w-8 h-8 rounded-full flex items-center justify-center
                    <%= activity.type === 'certificate' ? 'bg-green-100' : 
                        activity.type === 'user' ? 'bg-blue-100' : 
                        'bg-purple-100' %>">
                    <% if (activity.type === 'certificate') { %>
                    <svg class="w-4 h-4 text-green-600" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 12l2 2 4-4m5.586-3.414a2 2 0 00-2.828 0l-4.829 4.828a2 2 0 01-2.828 0l-2.828-2.828a2 2 0 00-2.828 0L1 14v5a2 2 0 002 2h14a2 2 0 002-2v-1"></path>
                    </svg>
                    <% } else if (activity.type === 'user') { %>
                    <svg class="w-4 h-4 text-blue-600" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M16 7a4 4 0 11-8 0 4 4 0 018 0zM12 14a7 7 0 00-7 7h14a7 7 0 00-7-7z"></path>
                    </svg>
                    <% } else { %>
                    <svg class="w-4 h-4 text-purple-600" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 8c-1.657 0-3 .895-3 2s1.343 2 3 2 3 .895 3 2-1.343 2-3 2m0-8c1.11 0 2.08.402 2.599 1M12 8V7m0 1v8m0 0v1m0-1c-1.11 0-2.08-.402-2.599-1"></path>
                    </svg>
                    <% } %>
                </div>
            </div>
            <div class="flex-1 min-w-0">
                <p class="text-sm font-medium text-gray-900 truncate"><%= activity.description %></p>
                <p class="text-xs text-gray-500"><%= new Date(activity.timestamp).toLocaleString() %></p>
            </div>
        </div>
        <% }); %>
        <% } else { %>
        <div class="text-center py-8">
            <svg class="w-12 h-12 text-gray-300 mx-auto mb-4" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 5H7a2 2 0 00-2 2v10a2 2 0 002 2h8a2 2 0 002-2V7a2 2 0 00-2-2h-2M9 5a2 2 0 002 2h2a2 2 0 002-2M9 5a2 2 0 012-2h2a2 2 0 012 2"></path>
            </svg>
            <p class="text-gray-500">No recent activity</p>
        </div>
        <% } %>
    </div>
</div>

<script>
    // Revenue Chart
    const revenueCtx = document.getElementById('revenueChart').getContext('2d');
    new Chart(revenueCtx, {
        type: 'line',
        data: {
            labels: <%- JSON.stringify(revenueChart.labels) %>,
            datasets: [{
                label: 'Revenue',
                data: <%- JSON.stringify(revenueChart.data) %>,
                borderColor: 'rgb(34, 197, 94)',
                backgroundColor: 'rgba(34, 197, 94, 0.1)',
                tension: 0.4,
                fill: true
            }]
        },
        options: {
            responsive: true,
            maintainAspectRatio: false,
            plugins: {
                legend: { display: false }
            },
            scales: {
                y: {
                    beginAtZero: true,
                    grid: { color: 'rgba(0, 0, 0, 0.1)' },
                    ticks: {
                        callback: function(value) {
                            return '$' + Number(value).toFixed(2);
                        }
                    }
                },
                x: { grid: { display: false } }
            }
        }
    });

    // Certificates Chart
    const certificatesCtx = document.getElementById('certificatesChart').getContext('2d');
    new Chart(certificatesCtx, {
        type: 'line',
        data: {
            labels: <%- JSON.stringify(certificatesChart.labels) %>,
            datasets: [{
                label: 'Certificates Generated',
                data: <%- JSON.stringify(certificatesChart.data) %>,
                borderColor: 'rgb(59, 130, 246)',
                backgroundColor: 'rgba(59, 130, 246, 0.1)',
                tension: 0.4,
                fill: true
            }]
        },
        options: {
            responsive: true,
            maintainAspectRatio: false,
            plugins: {
                legend: { display: false }
            },
            scales: {
                y: {
                    beginAtZero: true,
                    grid: { color: 'rgba(0, 0, 0, 0.1)' }
                },
                x: { grid: { display: false } }
            }
        }
    });

    // Auto refresh every 5 minutes
    setInterval(() => {
        location.reload();
    }, 300000);
</script>