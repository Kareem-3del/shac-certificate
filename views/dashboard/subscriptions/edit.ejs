<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <title>Edit Subscription - <%= subscription.name %> - Admin Panel</title>
  <link href="https://cdn.jsdelivr.net/npm/tailwindcss@2.2.19/dist/tailwind.min.css" rel="stylesheet">
  <link href="https://fonts.googleapis.com/css2?family=Inter:wght@300;400;500;600;700&display=swap" rel="stylesheet">
  <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.0.0/css/all.min.css">
  
  <style>
    :root {
      --color-primary: 59 130 246;
      --color-secondary: 99 102 241;
      --color-accent: 34 197 94;
      --color-background: 249 250 251;
      --color-surface: 255 255 255;
    }
    
    * {
      font-family: "Inter", sans-serif;
    }
    
    .card-hover {
      transition: all 0.3s ease;
    }
    
    .card-hover:hover {
      transform: translateY(-2px);
      box-shadow: 0 8px 25px rgba(0,0,0,0.15);
    }
    
    .gradient-bg {
      background: linear-gradient(135deg, rgb(var(--color-primary)) 0%, rgb(var(--color-secondary)) 100%);
    }

    .nav-active {
      color: rgb(37 99 235);
      background-color: rgb(219 234 254);
      border-right: 2px solid rgb(37 99 235);
    }
    
    .animate-fade-in {
      animation: fadeIn 0.6s ease-out;
    }
    
    @keyframes fadeIn {
      from { opacity: 0; transform: translateY(20px); }
      to { opacity: 1; transform: translateY(0); }
    }
    
    .stat-card {
      background: linear-gradient(135deg, rgb(var(--color-surface)) 0%, rgb(248 250 252) 100%);
      border: 1px solid rgb(226 232 240);
    }
    
    .nav-item {
      transition: all 0.2s ease;
    }
    
    .nav-item:hover {
      background-color: rgb(241 245 249);
      border-left: 4px solid rgb(var(--color-primary));
    }
    
    .nav-item.active {
      background-color: rgb(239 246 255);
      border-left: 4px solid rgb(37 99 235);
      color: rgb(29 78 216);
    }
  </style>
</head>
<body class="min-h-screen" style="background-color: rgb(var(--color-background))">
  <!-- Top Navigation -->
  <nav class="shadow-sm border-b fixed w-full top-0 z-50" style="background-color: rgb(var(--color-surface)); border-color: rgb(229 231 235)">
    <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8">
      <div class="flex justify-between h-16">
        <div class="flex items-center">
          <img class="h-8 w-auto" src="https://shacpr.org.sa/images/sha.png" alt="SHA Logo">
          <div class="ml-4">
            <h1 class="text-xl font-semibold text-gray-900">Admin Dashboard</h1>
          </div>
        </div>
        
        <div class="flex items-center space-x-4">
          <div class="flex items-center space-x-2">
            <div class="w-2 h-2 bg-green-400 rounded-full animate-pulse"></div>
            <span class="text-sm text-gray-500">Live</span>
          </div>
          <div class="text-sm text-gray-600">
            <i class="fas fa-calendar mr-1"></i>
            <span id="currentDate"></span>
          </div>
          <a href="/" class="text-gray-600 hover:text-gray-900 px-3 py-2 rounded-md text-sm font-medium">
            <i class="fas fa-home mr-1"></i>Main Site
          </a>
          <a href="/auth/logout" class="bg-red-600 hover:bg-red-700 text-white px-4 py-2 rounded-md text-sm font-medium">
            <i class="fas fa-sign-out-alt mr-1"></i>Logout
          </a>
        </div>
      </div>
    </div>
  </nav>

  <div class="flex pt-16">
    <!-- Sidebar -->
    <nav class="w-64 min-h-screen shadow-lg" style="background-color: rgb(var(--color-surface))">
      <div class="p-6">
        <div class="flex items-center space-x-3">
          <img class="h-8 w-8" src="https://shacpr.org.sa/images/sha.png" alt="SHA Logo">
          <h1 class="text-xl font-bold gradient-bg bg-clip-text text-transparent">Admin Dashboard</h1>
        </div>
      </div>
      
      <ul class="mt-6 px-4 space-y-1">
        <!-- Main Navigation -->
        <li>
          <a href="/dashboard" class="flex items-center px-4 py-3 text-sm font-medium text-gray-700 hover:bg-blue-50 hover:text-blue-600 transition-colors rounded-lg">
            <i class="fas fa-tachometer-alt w-5 h-5 mr-3"></i>
            Dashboard Overview
          </a>
        </li>
        
        <!-- Analytics Section -->
        <li class="pt-4">
          <div class="px-4 text-xs font-semibold text-gray-400 uppercase tracking-wider mb-2">Analytics</div>
        </li>
        <li>
          <a href="/dashboard/transactions" class="flex items-center px-4 py-3 text-sm font-medium text-gray-700 hover:bg-blue-50 hover:text-blue-600 transition-colors rounded-lg">
            <i class="fas fa-credit-card w-5 h-5 mr-3"></i>
            Transactions
          </a>
        </li>

        <!-- Management Section -->
        <li class="pt-4">
          <div class="px-4 text-xs font-semibold text-gray-400 uppercase tracking-wider mb-2">Management</div>
        </li>
        <li>
          <a href="/dashboard/certificates" class="flex items-center px-4 py-3 text-sm font-medium text-gray-700 hover:bg-blue-50 hover:text-blue-600 transition-colors rounded-lg">
            <i class="fas fa-certificate w-5 h-5 mr-3"></i>
            Certificates
          </a>
        </li>
        <li>
          <a href="/dashboard/users" class="flex items-center px-4 py-3 text-sm font-medium text-gray-700 hover:bg-blue-50 hover:text-blue-600 transition-colors rounded-lg">
            <i class="fas fa-users w-5 h-5 mr-3"></i>
            User Management
          </a>
        </li>
        <li>
          <a href="/dashboard/subscriptions" class="flex items-center px-4 py-3 text-sm font-medium text-gray-700 hover:bg-blue-50 hover:text-blue-600 transition-colors rounded-lg nav-active">
            <i class="fas fa-crown w-5 h-5 mr-3"></i>
            Subscriptions
          </a>
        </li>
        <li>
          <a href="/dashboard/templates" class="flex items-center px-4 py-3 text-sm font-medium text-gray-700 hover:bg-blue-50 hover:text-blue-600 transition-colors rounded-lg">
            <i class="fas fa-file-alt w-5 h-5 mr-3"></i>
            Certificate Templates
          </a>
        </li>

        <!-- System Section -->
        <li class="pt-4">
          <div class="px-4 text-xs font-semibold text-gray-400 uppercase tracking-wider mb-2">System</div>
        </li>
        <li>
          <a href="/dashboard/settings" class="flex items-center px-4 py-3 text-sm font-medium text-gray-700 hover:bg-blue-50 hover:text-blue-600 transition-colors rounded-lg">
            <i class="fas fa-cog w-5 h-5 mr-3"></i>
            System Settings
          </a>
        </li>
        <li>
          <a href="/dashboard/email" class="flex items-center px-4 py-3 text-sm font-medium text-gray-700 hover:bg-blue-50 hover:text-blue-600 transition-colors rounded-lg">
            <i class="fas fa-envelope w-5 h-5 mr-3"></i>
            Bulk Email
          </a>
        </li>
        <li>
          <a href="/dashboard/audit" class="flex items-center px-4 py-3 text-sm font-medium text-gray-700 hover:bg-blue-50 hover:text-blue-600 transition-colors rounded-lg">
            <i class="fas fa-clipboard-list w-5 h-5 mr-3"></i>
            Audit Logs
          </a>
        </li>
      </ul>
      
      <!-- User Info Section at Bottom -->
      <div class="absolute bottom-0 left-0 right-0 p-6 border-t" style="border-color: rgb(229 231 235)">
        <div class="flex items-center space-x-3">
          <div class="w-10 h-10 rounded-full gradient-bg flex items-center justify-center">
            <span class="text-white text-sm font-medium"><%= user.username.charAt(0).toUpperCase() %></span>
          </div>
          <div class="flex-1">
            <p class="text-sm font-medium text-gray-900"><%= user.username %></p>
            <p class="text-xs capitalize" style="color: rgb(107 114 128)"><%= user.role %></p>
          </div>
          <a href="/logout" class="text-gray-400 hover:text-gray-600">
            <svg class="w-5 h-5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M17 16l4-4m0 0l-4-4m4 4H7m6 4v1a3 3 0 01-3 3H6a3 3 0 01-3-3V7a3 3 0 013-3h4a3 3 0 013 3v1"></path>
            </svg>
          </a>
        </div>
      </div>
    </nav>

    <!-- Main Content -->
    <div class="flex-1 p-8">
      <!-- Page Header -->
      <div class="mb-8">
        <nav class="mb-4">
          <ol class="flex space-x-2 text-sm text-gray-500">
            <li><a href="/dashboard" class="hover:text-gray-700">Dashboard</a></li>
            <li><span class="mx-2">/</span></li>
            <li><a href="/dashboard/subscriptions" class="hover:text-gray-700">Subscriptions</a></li>
            <li><span class="mx-2">/</span></li>
            <li><a href="/dashboard/subscriptions/<%= subscription.id %>" class="hover:text-gray-700"><%= subscription.name %></a></li>
            <li><span class="mx-2">/</span></li>
            <li class="text-gray-900">Edit</li>
          </ol>
        </nav>
        
        <div class="flex items-center justify-between">
          <div>
            <h1 class="text-2xl font-bold text-gray-900">Edit Subscription</h1>
            <p class="mt-1 text-sm text-gray-600">Edit <%= subscription.name %></p>
          </div>
          <div class="flex space-x-3">
            <a href="/dashboard/subscriptions/<%= subscription.id %>" class="px-4 py-2 text-sm font-medium text-gray-700 bg-white border border-gray-300 rounded-md shadow-sm hover:bg-gray-50 focus:outline-none focus:ring-2 focus:ring-offset-2 focus:ring-blue-500">
              <i class="fas fa-arrow-left mr-2"></i>Back to View
            </a>
            <a href="/dashboard/subscriptions" class="px-4 py-2 text-sm font-medium text-gray-600 bg-gray-100 border border-gray-300 rounded-md shadow-sm hover:bg-gray-200 focus:outline-none focus:ring-2 focus:ring-offset-2 focus:ring-gray-500">
              <i class="fas fa-list mr-2"></i>All Subscriptions
            </a>
          </div>
        </div>
      </div>

<div class="max-w-2xl mx-auto">
  <!-- Form Card -->
  <div class="bg-white shadow-sm rounded-lg border border-gray-200 card-hover">
    <div class="px-6 py-4 border-b border-gray-200">
      <h3 class="text-lg font-medium text-gray-900">Edit Subscription Plan</h3>
      <p class="mt-1 text-sm text-gray-600">Update the details for "<%= subscription.name %>" subscription plan.</p>
    </div>

    <form action="/dashboard/subscriptions/<%= subscription.id %>/edit" method="POST" class="px-6 py-6 space-y-6">
      <!-- Plan Name -->
      <div>
        <label for="name" class="block text-sm font-medium text-gray-700 mb-2">
          Plan Name <span class="text-red-500">*</span>
        </label>
        <input type="text" name="name" id="name" required
               value="<%= subscription.name %>"
               class="w-full px-3 py-2 border border-gray-300 rounded-md shadow-sm focus:outline-none focus:ring-2 focus:ring-blue-500 focus:border-transparent"
               placeholder="Enter plan name (e.g., Basic Plan, Premium Plan)">
      </div>

      <!-- Price -->
      <div>
        <label for="price" class="block text-sm font-medium text-gray-700 mb-2">
          Price <span class="text-red-500">*</span>
        </label>
        <div class="relative">
          <div class="absolute inset-y-0 left-0 pl-3 flex items-center pointer-events-none">
            <span class="text-gray-500 sm:text-sm">$</span>
          </div>
          <input type="number" name="price" id="price" step="0.01" min="0" required
                 value="<%= subscription.price %>"
                 class="w-full pl-7 pr-3 py-2 border border-gray-300 rounded-md shadow-sm focus:outline-none focus:ring-2 focus:ring-blue-500 focus:border-transparent"
                 placeholder="0.00">
        </div>
      </div>

      <!-- Points -->
      <div>
        <label for="points" class="block text-sm font-medium text-gray-700 mb-2">
          Points <span class="text-red-500">*</span>
        </label>
        <input type="number" name="points" id="points" min="0" required
               value="<%= subscription.points %>"
               class="w-full px-3 py-2 border border-gray-300 rounded-md shadow-sm focus:outline-none focus:ring-2 focus:ring-blue-500 focus:border-transparent"
               placeholder="Enter points value">
        <p class="mt-1 text-sm text-gray-500">Points awarded to users when they subscribe to this plan</p>
      </div>

      <!-- Config ID -->
      <div>
        <label for="configId" class="block text-sm font-medium text-gray-700 mb-2">
          Config ID <span class="text-red-500">*</span>
        </label>
        <input type="number" name="configId" id="configId" min="1" required
               value="<%= subscription.configId %>"
               class="w-full px-3 py-2 border border-gray-300 rounded-md shadow-sm focus:outline-none focus:ring-2 focus:ring-blue-500 focus:border-transparent"
               placeholder="Enter configuration ID">
        <p class="mt-1 text-sm text-gray-500">Configuration ID used for payment processing</p>
      </div>

      <!-- Details Link -->
      <div>
        <label for="details_link" class="block text-sm font-medium text-gray-700 mb-2">
          Details Link
        </label>
        <input type="url" name="details_link" id="details_link"
               value="<%= subscription.details_link || '' %>"
               class="w-full px-3 py-2 border border-gray-300 rounded-md shadow-sm focus:outline-none focus:ring-2 focus:ring-blue-500 focus:border-transparent"
               placeholder="https://example.com/plan-details">
        <p class="mt-1 text-sm text-gray-500">Optional link to more details about this plan</p>
      </div>

      <!-- Plan Features -->
      <div class="grid grid-cols-1 md:grid-cols-2 gap-6">
        <div>
          <label class="block text-sm font-medium text-gray-700 mb-3">Plan Features</label>
          <div class="space-y-3">
            <div class="flex items-center">
              <input type="checkbox" name="instructor_id" id="instructor_id" value="true"
                     <%= subscription.instructor_id ? 'checked' : '' %>
                     class="h-4 w-4 text-blue-600 focus:ring-blue-500 border-gray-300 rounded">
              <label for="instructor_id" class="ml-2 text-sm text-gray-900">Include Instructor ID</label>
            </div>
            <div class="flex items-center">
              <input type="checkbox" name="instructor_id_random" id="instructor_id_random" value="true"
                     <%= subscription.instructor_id_random ? 'checked' : '' %>
                     class="h-4 w-4 text-blue-600 focus:ring-blue-500 border-gray-300 rounded">
              <label for="instructor_id_random" class="ml-2 text-sm text-gray-900">Random Instructor ID</label>
            </div>
            <div class="flex items-center">
              <input type="checkbox" name="instructor_name" id="instructor_name" value="true"
                     <%= subscription.instructor_name ? 'checked' : '' %>
                     class="h-4 w-4 text-blue-600 focus:ring-blue-500 border-gray-300 rounded">
              <label for="instructor_name" class="ml-2 text-sm text-gray-900">Include Instructor Name</label>
            </div>
            <div class="flex items-center">
              <input type="checkbox" name="center_name" id="center_name" value="true"
                     <%= subscription.center_name ? 'checked' : '' %>
                     class="h-4 w-4 text-blue-600 focus:ring-blue-500 border-gray-300 rounded">
              <label for="center_name" class="ml-2 text-sm text-gray-900">Include Center Name</label>
            </div>
          </div>
        </div>
      </div>

      <!-- Email Message -->
      <div>
        <label for="emailMessage" class="block text-sm font-medium text-gray-700 mb-2">
          Email Message Template
        </label>
        <textarea name="emailMessage" id="emailMessage" rows="4"
                  class="w-full px-3 py-2 border border-gray-300 rounded-md shadow-sm focus:outline-none focus:ring-2 focus:ring-blue-500 focus:border-transparent"
                  placeholder="Welcome to our website your password is [PASSWORD] , email: [EMAIL]"><%= subscription.emailMessage || 'Welcome to our website your password is [PASSWORD] , email: [EMAIL]' %></textarea>
        <p class="mt-1 text-sm text-gray-500">Email template sent to users when they subscribe. Use [PASSWORD] and [EMAIL] placeholders.</p>
      </div>

      <!-- Form Actions -->
      <div class="flex justify-between pt-6 border-t border-gray-200">
        <div class="flex space-x-3">
          <a href="/dashboard/subscriptions/<%= subscription.id %>" 
             class="px-4 py-2 text-sm font-medium text-gray-700 bg-white border border-gray-300 rounded-md shadow-sm hover:bg-gray-50 focus:outline-none focus:ring-2 focus:ring-offset-2 focus:ring-blue-500">
            <i class="fas fa-times mr-2"></i>Cancel
          </a>
        </div>
        <div class="flex space-x-3">
          <button type="button" onclick="confirmDelete()"
                  class="px-4 py-2 text-sm font-medium text-white bg-red-600 border border-transparent rounded-md shadow-sm hover:bg-red-700 focus:outline-none focus:ring-2 focus:ring-offset-2 focus:ring-red-500">
            <i class="fas fa-trash mr-2"></i>Delete Plan
          </button>
          <button type="submit" 
                  class="px-4 py-2 text-sm font-medium text-white bg-blue-600 border border-transparent rounded-md shadow-sm hover:bg-blue-700 focus:outline-none focus:ring-2 focus:ring-offset-2 focus:ring-blue-500">
            <i class="fas fa-save mr-2"></i>Save Changes
          </button>
        </div>
      </div>
    </form>
  </div>

  <!-- Subscription Stats -->
  <div class="mt-6 bg-gradient-to-r from-blue-50 to-indigo-50 border border-blue-200 rounded-lg p-6">
    <div class="flex items-center">
      <div class="flex-shrink-0">
        <i class="fas fa-chart-line text-blue-500 text-2xl"></i>
      </div>
      <div class="ml-4 flex-1">
        <h3 class="text-lg font-medium text-blue-900">Plan Statistics</h3>
        <div class="mt-3 grid grid-cols-1 md:grid-cols-3 gap-4">
          <div class="bg-white rounded-lg p-3 border border-blue-100">
            <div class="text-sm text-gray-600">Total Subscribers</div>
            <div class="text-2xl font-bold text-blue-600">
              <%= subscription.users ? subscription.users.length : 0 %>
            </div>
          </div>
          <div class="bg-white rounded-lg p-3 border border-blue-100">
            <div class="text-sm text-gray-600">Times Purchased</div>
            <div class="text-2xl font-bold text-green-600">
              <%= subscription.purchased || 0 %>
            </div>
          </div>
          <div class="bg-white rounded-lg p-3 border border-blue-100">
            <div class="text-sm text-gray-600">Revenue Generated</div>
            <div class="text-2xl font-bold text-purple-600">
              $<%= ((subscription.price || 0) * (subscription.purchased || 0)).toFixed(2) %>
            </div>
          </div>
        </div>
      </div>
    </div>
  </div>

  <!-- Warning Section -->
  <div class="mt-6 bg-yellow-50 border border-yellow-200 rounded-lg p-4">
    <div class="flex">
      <div class="flex-shrink-0">
        <i class="fas fa-exclamation-triangle text-yellow-400 text-lg"></i>
      </div>
      <div class="ml-3">
        <h3 class="text-sm font-medium text-yellow-800">Important Notes</h3>
        <div class="mt-2 text-sm text-yellow-700">
          <ul class="list-disc list-inside space-y-1">
            <li>Changes to pricing will not affect existing subscribers</li>
            <li>Config ID changes require coordination with payment processors</li>
            <li>Deleting this plan will remove it from new signups but won't affect current subscribers</li>
            <li>Email template changes apply to new subscribers only</li>
          </ul>
        </div>
      </div>
    </div>
  </div>
</div>

<!-- Delete Confirmation Modal -->
<div id="deleteModal" class="fixed inset-0 bg-gray-600 bg-opacity-50 overflow-y-auto h-full w-full hidden">
  <div class="relative top-20 mx-auto p-5 border w-96 shadow-lg rounded-md bg-white">
    <div class="mt-3 text-center">
      <div class="mx-auto flex items-center justify-center h-12 w-12 rounded-full bg-red-100">
        <i class="fas fa-exclamation-triangle text-red-600 text-xl"></i>
      </div>
      <h3 class="text-lg font-medium text-gray-900 mt-2">Delete Subscription Plan</h3>
      <div class="mt-2 px-7 py-3">
        <p class="text-sm text-gray-500">
          Are you sure you want to delete "<%= subscription.name %>"? This action cannot be undone.
        </p>
      </div>
      <div class="items-center px-4 py-3">
        <button id="confirmDeleteBtn" 
                class="px-4 py-2 bg-red-500 text-white text-base font-medium rounded-md w-24 mr-2 hover:bg-red-600 focus:outline-none focus:ring-2 focus:ring-red-300">
          Delete
        </button>
        <button onclick="closeDeleteModal()" 
                class="px-4 py-2 bg-gray-500 text-white text-base font-medium rounded-md w-24 hover:bg-gray-600 focus:outline-none focus:ring-2 focus:ring-gray-300">
          Cancel
        </button>
      </div>
    </div>
  </div>
</div>

<script>
function confirmDelete() {
  document.getElementById('deleteModal').classList.remove('hidden');
}

function closeDeleteModal() {
  document.getElementById('deleteModal').classList.add('hidden');
}

document.getElementById('confirmDeleteBtn').addEventListener('click', function() {
  fetch('/dashboard/subscriptions/<%= subscription.id %>', {
    method: 'DELETE',
    headers: {
      'Content-Type': 'application/json',
    }
  })
  .then(response => response.json())
  .then(data => {
    if (data.success) {
      window.location.href = '/dashboard/subscriptions';
    } else {
      alert('Error deleting subscription: ' + (data.error || 'Unknown error'));
      closeDeleteModal();
    }
  })
  .catch(error => {
    console.error('Error:', error);
    alert('Error deleting subscription');
    closeDeleteModal();
  });
});

// Close modal when clicking outside
document.getElementById('deleteModal').addEventListener('click', function(e) {
  if (e.target === this) {
    closeDeleteModal();
  }
});

// Update current date
document.addEventListener('DOMContentLoaded', function() {
  const now = new Date();
  const dateString = now.toLocaleDateString('en-US', {
    weekday: 'long',
    year: 'numeric', 
    month: 'long',
    day: 'numeric'
  });
  const dateElement = document.getElementById('currentDate');
  if (dateElement) {
    dateElement.textContent = dateString;
  }
});
</script>

</body>
</html>