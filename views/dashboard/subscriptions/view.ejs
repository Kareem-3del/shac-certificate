<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <title>Subscription - <%= subscription.name %> - Admin Panel</title>
  <link href="https://cdn.jsdelivr.net/npm/tailwindcss@2.2.19/dist/tailwind.min.css" rel="stylesheet">
  <link href="https://fonts.googleapis.com/css2?family=Inter:wght@300;400;500;600;700&display=swap" rel="stylesheet">
  <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.0.0/css/all.min.css">
  
  <style>
    :root {
      --color-primary: 59 130 246;
      --color-secondary: 99 102 241;
      --color-accent: 34 197 94;
      --color-background: 249 250 251;
      --color-surface: 255 255 255;
    }
    
    * {
      font-family: "Inter", sans-serif;
    }
    
    .card-hover {
      transition: all 0.3s ease;
    }
    
    .card-hover:hover {
      transform: translateY(-2px);
      box-shadow: 0 8px 25px rgba(0,0,0,0.15);
    }
    
    .gradient-bg {
      background: linear-gradient(135deg, rgb(var(--color-primary)) 0%, rgb(var(--color-secondary)) 100%);
    }

    .nav-active {
      color: rgb(37 99 235);
      background-color: rgb(219 234 254);
      border-right: 2px solid rgb(37 99 235);
    }
    
    .animate-fade-in {
      animation: fadeIn 0.6s ease-out;
    }
    
    @keyframes fadeIn {
      from { opacity: 0; transform: translateY(20px); }
      to { opacity: 1; transform: translateY(0); }
    }
    
    .stat-card {
      background: linear-gradient(135deg, rgb(var(--color-surface)) 0%, rgb(248 250 252) 100%);
      border: 1px solid rgb(226 232 240);
    }
    
    .nav-item {
      transition: all 0.2s ease;
    }
    
    .nav-item:hover {
      background-color: rgb(241 245 249);
      border-left: 4px solid rgb(var(--color-primary));
    }
    
    .nav-item.active {
      background-color: rgb(239 246 255);
      border-left: 4px solid rgb(37 99 235);
      color: rgb(29 78 216);
    }
  </style>
</head>
<body class="min-h-screen" style="background-color: rgb(var(--color-background))">
  <!-- Top Navigation -->
  <nav class="shadow-sm border-b fixed w-full top-0 z-50" style="background-color: rgb(var(--color-surface)); border-color: rgb(229 231 235)">
    <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8">
      <div class="flex justify-between h-16">
        <div class="flex items-center">
          <img class="h-8 w-auto" src="https://shacpr.org.sa/images/sha.png" alt="SHA Logo">
          <div class="ml-4">
            <h1 class="text-xl font-semibold text-gray-900">Admin Dashboard</h1>
          </div>
        </div>
        
        <div class="flex items-center space-x-4">
          <div class="flex items-center space-x-2">
            <div class="w-2 h-2 bg-green-400 rounded-full animate-pulse"></div>
            <span class="text-sm text-gray-500">Live</span>
          </div>
          <div class="text-sm text-gray-600">
            <i class="fas fa-calendar mr-1"></i>
            <span id="currentDate"></span>
          </div>
          <a href="/" class="text-gray-600 hover:text-gray-900 px-3 py-2 rounded-md text-sm font-medium">
            <i class="fas fa-home mr-1"></i>Main Site
          </a>
          <a href="/auth/logout" class="bg-red-600 hover:bg-red-700 text-white px-4 py-2 rounded-md text-sm font-medium">
            <i class="fas fa-sign-out-alt mr-1"></i>Logout
          </a>
        </div>
      </div>
    </div>
  </nav>

  <div class="flex pt-16">
    <!-- Sidebar -->
    <nav class="w-64 min-h-screen shadow-lg" style="background-color: rgb(var(--color-surface))">
      <div class="p-6">
        <div class="flex items-center space-x-3">
          <img class="h-8 w-8" src="https://shacpr.org.sa/images/sha.png" alt="SHA Logo">
          <h1 class="text-xl font-bold gradient-bg bg-clip-text text-transparent">Admin Dashboard</h1>
        </div>
      </div>
      
      <ul class="mt-6 px-4 space-y-1">
        <!-- Main Navigation -->
        <li>
          <a href="/dashboard" class="flex items-center px-4 py-3 text-sm font-medium text-gray-700 hover:bg-blue-50 hover:text-blue-600 transition-colors rounded-lg">
            <i class="fas fa-tachometer-alt w-5 h-5 mr-3"></i>
            Dashboard Overview
          </a>
        </li>
        
        <!-- Analytics Section -->
        <li class="pt-4">
          <div class="px-4 text-xs font-semibold text-gray-400 uppercase tracking-wider mb-2">Analytics</div>
        </li>
        <li>
          <a href="/dashboard/transactions" class="flex items-center px-4 py-3 text-sm font-medium text-gray-700 hover:bg-blue-50 hover:text-blue-600 transition-colors rounded-lg">
            <i class="fas fa-credit-card w-5 h-5 mr-3"></i>
            Transactions
          </a>
        </li>

        <!-- Management Section -->
        <li class="pt-4">
          <div class="px-4 text-xs font-semibold text-gray-400 uppercase tracking-wider mb-2">Management</div>
        </li>
        <li>
          <a href="/dashboard/certificates" class="flex items-center px-4 py-3 text-sm font-medium text-gray-700 hover:bg-blue-50 hover:text-blue-600 transition-colors rounded-lg">
            <i class="fas fa-certificate w-5 h-5 mr-3"></i>
            Certificates
          </a>
        </li>
        <li>
          <a href="/dashboard/users" class="flex items-center px-4 py-3 text-sm font-medium text-gray-700 hover:bg-blue-50 hover:text-blue-600 transition-colors rounded-lg">
            <i class="fas fa-users w-5 h-5 mr-3"></i>
            User Management
          </a>
        </li>
        <li>
          <a href="/dashboard/subscriptions" class="flex items-center px-4 py-3 text-sm font-medium text-gray-700 hover:bg-blue-50 hover:text-blue-600 transition-colors rounded-lg nav-active">
            <i class="fas fa-crown w-5 h-5 mr-3"></i>
            Subscriptions
          </a>
        </li>
        <li>
          <a href="/dashboard/templates" class="flex items-center px-4 py-3 text-sm font-medium text-gray-700 hover:bg-blue-50 hover:text-blue-600 transition-colors rounded-lg">
            <i class="fas fa-file-alt w-5 h-5 mr-3"></i>
            Certificate Templates
          </a>
        </li>

        <!-- System Section -->
        <li class="pt-4">
          <div class="px-4 text-xs font-semibold text-gray-400 uppercase tracking-wider mb-2">System</div>
        </li>
        <li>
          <a href="/dashboard/settings" class="flex items-center px-4 py-3 text-sm font-medium text-gray-700 hover:bg-blue-50 hover:text-blue-600 transition-colors rounded-lg">
            <i class="fas fa-cog w-5 h-5 mr-3"></i>
            System Settings
          </a>
        </li>
        <li>
          <a href="/dashboard/email" class="flex items-center px-4 py-3 text-sm font-medium text-gray-700 hover:bg-blue-50 hover:text-blue-600 transition-colors rounded-lg">
            <i class="fas fa-envelope w-5 h-5 mr-3"></i>
            Bulk Email
          </a>
        </li>
        <li>
          <a href="/dashboard/audit" class="flex items-center px-4 py-3 text-sm font-medium text-gray-700 hover:bg-blue-50 hover:text-blue-600 transition-colors rounded-lg">
            <i class="fas fa-clipboard-list w-5 h-5 mr-3"></i>
            Audit Logs
          </a>
        </li>
      </ul>
      
      <!-- User Info Section at Bottom -->
      <div class="absolute bottom-0 left-0 right-0 p-6 border-t" style="border-color: rgb(229 231 235)">
        <div class="flex items-center space-x-3">
          <div class="w-10 h-10 rounded-full gradient-bg flex items-center justify-center">
            <span class="text-white text-sm font-medium"><%= user.username.charAt(0).toUpperCase() %></span>
          </div>
          <div class="flex-1">
            <p class="text-sm font-medium text-gray-900"><%= user.username %></p>
            <p class="text-xs capitalize" style="color: rgb(107 114 128)"><%= user.role %></p>
          </div>
          <a href="/logout" class="text-gray-400 hover:text-gray-600">
            <svg class="w-5 h-5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M17 16l4-4m0 0l-4-4m4 4H7m6 4v1a3 3 0 01-3 3H6a3 3 0 01-3-3V7a3 3 0 013-3h4a3 3 0 013 3v1"></path>
            </svg>
          </a>
        </div>
      </div>
    </nav>

    <!-- Main Content -->
    <div class="flex-1 p-8">
      <!-- Page Header -->
      <div class="mb-8">
        <nav class="mb-4">
          <ol class="flex space-x-2 text-sm text-gray-500">
            <li><a href="/dashboard" class="hover:text-gray-700">Dashboard</a></li>
            <li><span class="mx-2">/</span></li>
            <li><a href="/dashboard/subscriptions" class="hover:text-gray-700">Subscriptions</a></li>
            <li><span class="mx-2">/</span></li>
            <li class="text-gray-900"><%= subscription.name %></li>
          </ol>
        </nav>
        
        <div class="flex items-center justify-between">
          <div>
            <h1 class="text-2xl font-bold text-gray-900">Subscription Details</h1>
            <p class="mt-1 text-sm text-gray-600">View details for <%= subscription.name %></p>
          </div>
          <div class="flex space-x-3">
            <a href="/dashboard/subscriptions" class="px-4 py-2 text-sm font-medium text-gray-700 bg-white border border-gray-300 rounded-md shadow-sm hover:bg-gray-50 focus:outline-none focus:ring-2 focus:ring-offset-2 focus:ring-blue-500">
              <i class="fas fa-arrow-left mr-2"></i>Back to List
            </a>
            <a href="/dashboard/subscriptions/<%= subscription.id %>/edit" class="px-4 py-2 text-sm font-medium text-white bg-blue-600 border border-transparent rounded-md shadow-sm hover:bg-blue-700 focus:outline-none focus:ring-2 focus:ring-offset-2 focus:ring-blue-500">
              <i class="fas fa-edit mr-2"></i>Edit Plan
            </a>
          </div>
        </div>
      </div>

<div class="grid grid-cols-1 lg:grid-cols-3 gap-8">
  <!-- Main Content -->
  <div class="lg:col-span-2 space-y-6">
    <!-- Plan Overview -->
    <div class="bg-white shadow-sm rounded-lg border border-gray-200 card-hover">
      <div class="px-6 py-4 border-b border-gray-200">
        <div class="flex items-center justify-between">
          <h3 class="text-lg font-medium text-gray-900">Plan Overview</h3>
          <span class="px-3 py-1 text-xs font-medium bg-green-100 text-green-800 rounded-full">Active</span>
        </div>
      </div>
      <div class="px-6 py-6">
        <dl class="grid grid-cols-1 sm:grid-cols-2 gap-6">
          <div>
            <dt class="text-sm font-medium text-gray-500">Plan Name</dt>
            <dd class="mt-1 text-lg font-semibold text-gray-900"><%= subscription.name %></dd>
          </div>
          <div>
            <dt class="text-sm font-medium text-gray-500">Price</dt>
            <dd class="mt-1 text-lg font-semibold text-green-600">$<%= subscription.price %></dd>
          </div>
          <div>
            <dt class="text-sm font-medium text-gray-500">Points Awarded</dt>
            <dd class="mt-1 text-lg font-semibold text-blue-600"><%= subscription.points %> Points</dd>
          </div>
          <div>
            <dt class="text-sm font-medium text-gray-500">Configuration ID</dt>
            <dd class="mt-1 text-lg font-semibold text-gray-900">#<%= subscription.configId %></dd>
          </div>
          <div class="sm:col-span-2">
            <dt class="text-sm font-medium text-gray-500">Created Date</dt>
            <dd class="mt-1 text-sm text-gray-900">
              <i class="fas fa-calendar-alt mr-2 text-gray-400"></i>
              <%= new Date(subscription.created_at).toLocaleDateString('en-US', { 
                year: 'numeric', 
                month: 'long', 
                day: 'numeric' 
              }) %>
            </dd>
          </div>
        </dl>
        
        <% if (subscription.details_link) { %>
        <div class="mt-6 pt-6 border-t border-gray-200">
          <a href="<%= subscription.details_link %>" target="_blank" 
             class="inline-flex items-center px-4 py-2 text-sm font-medium text-blue-600 bg-blue-50 border border-blue-200 rounded-md hover:bg-blue-100 focus:outline-none focus:ring-2 focus:ring-offset-2 focus:ring-blue-500">
            <i class="fas fa-external-link-alt mr-2"></i>
            View Plan Details
          </a>
        </div>
        <% } %>
      </div>
    </div>

    <!-- Plan Features -->
    <div class="bg-white shadow-sm rounded-lg border border-gray-200 card-hover">
      <div class="px-6 py-4 border-b border-gray-200">
        <h3 class="text-lg font-medium text-gray-900">Plan Features</h3>
      </div>
      <div class="px-6 py-6">
        <div class="grid grid-cols-1 sm:grid-cols-2 gap-4">
          <div class="flex items-center">
            <div class="flex-shrink-0">
              <% if (subscription.instructor_id) { %>
                <i class="fas fa-check-circle text-green-500"></i>
              <% } else { %>
                <i class="fas fa-times-circle text-red-500"></i>
              <% } %>
            </div>
            <div class="ml-3">
              <span class="text-sm font-medium text-gray-900">Instructor ID Collection</span>
            </div>
          </div>
          
          <div class="flex items-center">
            <div class="flex-shrink-0">
              <% if (subscription.instructor_id_random) { %>
                <i class="fas fa-check-circle text-green-500"></i>
              <% } else { %>
                <i class="fas fa-times-circle text-red-500"></i>
              <% } %>
            </div>
            <div class="ml-3">
              <span class="text-sm font-medium text-gray-900">Random Instructor ID</span>
            </div>
          </div>
          
          <div class="flex items-center">
            <div class="flex-shrink-0">
              <% if (subscription.instructor_name) { %>
                <i class="fas fa-check-circle text-green-500"></i>
              <% } else { %>
                <i class="fas fa-times-circle text-red-500"></i>
              <% } %>
            </div>
            <div class="ml-3">
              <span class="text-sm font-medium text-gray-900">Instructor Name Collection</span>
            </div>
          </div>
          
          <div class="flex items-center">
            <div class="flex-shrink-0">
              <% if (subscription.center_name) { %>
                <i class="fas fa-check-circle text-green-500"></i>
              <% } else { %>
                <i class="fas fa-times-circle text-red-500"></i>
              <% } %>
            </div>
            <div class="ml-3">
              <span class="text-sm font-medium text-gray-900">Center Name Collection</span>
            </div>
          </div>
        </div>
      </div>
    </div>

    <!-- Email Template -->
    <div class="bg-white shadow-sm rounded-lg border border-gray-200 card-hover">
      <div class="px-6 py-4 border-b border-gray-200">
        <h3 class="text-lg font-medium text-gray-900">Email Template</h3>
      </div>
      <div class="px-6 py-6">
        <div class="bg-gray-50 rounded-lg p-4">
          <pre class="text-sm text-gray-700 whitespace-pre-wrap font-mono"><%= subscription.emailMessage || 'No email template configured' %></pre>
        </div>
        <div class="mt-4 text-xs text-gray-500">
          <p><strong>Available placeholders:</strong> [PASSWORD], [EMAIL]</p>
        </div>
      </div>
    </div>
  </div>

  <!-- Sidebar -->
  <div class="space-y-6">
    <!-- Quick Stats -->
    <div class="bg-white shadow-sm rounded-lg border border-gray-200 card-hover">
      <div class="px-6 py-4 border-b border-gray-200">
        <h3 class="text-lg font-medium text-gray-900">Statistics</h3>
      </div>
      <div class="px-6 py-6 space-y-4">
        <div class="flex items-center justify-between">
          <span class="text-sm font-medium text-gray-500">Total Subscribers</span>
          <span class="text-2xl font-bold text-blue-600">
            <%= subscription.users ? subscription.users.length : 0 %>
          </span>
        </div>
        <div class="flex items-center justify-between">
          <span class="text-sm font-medium text-gray-500">Times Purchased</span>
          <span class="text-2xl font-bold text-green-600">
            <%= subscription.purchased || 0 %>
          </span>
        </div>
        <div class="flex items-center justify-between">
          <span class="text-sm font-medium text-gray-500">Revenue Generated</span>
          <span class="text-2xl font-bold text-purple-600">
            $<%= ((subscription.price || 0) * (subscription.purchased || 0)).toFixed(2) %>
          </span>
        </div>
      </div>
    </div>

    <!-- Quick Actions -->
    <div class="bg-white shadow-sm rounded-lg border border-gray-200 card-hover">
      <div class="px-6 py-4 border-b border-gray-200">
        <h3 class="text-lg font-medium text-gray-900">Quick Actions</h3>
      </div>
      <div class="px-6 py-6 space-y-3">
        <a href="/dashboard/subscriptions/<%= subscription.id %>/edit" 
           class="w-full flex items-center justify-center px-4 py-2 text-sm font-medium text-white bg-blue-600 border border-transparent rounded-md hover:bg-blue-700 focus:outline-none focus:ring-2 focus:ring-offset-2 focus:ring-blue-500">
          <i class="fas fa-edit mr-2"></i>
          Edit Plan
        </a>
        
        <a href="/subscriptions/<%= subscription.id %>" target="_blank"
           class="w-full flex items-center justify-center px-4 py-2 text-sm font-medium text-gray-700 bg-white border border-gray-300 rounded-md hover:bg-gray-50 focus:outline-none focus:ring-2 focus:ring-offset-2 focus:ring-blue-500">
          <i class="fas fa-eye mr-2"></i>
          Preview Public Page
        </a>
        
        <button onclick="copySubscriptionLink()"
                class="w-full flex items-center justify-center px-4 py-2 text-sm font-medium text-gray-700 bg-gray-100 border border-gray-300 rounded-md hover:bg-gray-200 focus:outline-none focus:ring-2 focus:ring-offset-2 focus:ring-gray-500">
          <i class="fas fa-copy mr-2"></i>
          Copy Link
        </button>
        
        <button onclick="deleteSubscription()"
                class="w-full flex items-center justify-center px-4 py-2 text-sm font-medium text-white bg-red-600 border border-transparent rounded-md hover:bg-red-700 focus:outline-none focus:ring-2 focus:ring-offset-2 focus:ring-red-500">
          <i class="fas fa-trash mr-2"></i>
          Delete Plan
        </button>
      </div>
    </div>

    <!-- Recent Subscribers -->
    <% if (subscription.users && subscription.users.length > 0) { %>
    <div class="bg-white shadow-sm rounded-lg border border-gray-200 card-hover">
      <div class="px-6 py-4 border-b border-gray-200">
        <h3 class="text-lg font-medium text-gray-900">Recent Subscribers</h3>
      </div>
      <div class="px-6 py-6">
        <div class="space-y-3">
          <% subscription.users.slice(0, 5).forEach(user => { %>
          <div class="flex items-center space-x-3">
            <div class="flex-shrink-0">
              <div class="w-8 h-8 rounded-full bg-blue-100 flex items-center justify-center">
                <span class="text-xs font-medium text-blue-600">
                  <%= user.username ? user.username.charAt(0).toUpperCase() : 'U' %>
                </span>
              </div>
            </div>
            <div class="flex-1 min-w-0">
              <p class="text-sm font-medium text-gray-900 truncate">
                <%= user.username || 'Unknown User' %>
              </p>
              <p class="text-xs text-gray-500">
                <%= user.email || 'No email' %>
              </p>
            </div>
          </div>
          <% }); %>
          <% if (subscription.users.length > 5) { %>
          <div class="text-center pt-2">
            <span class="text-xs text-gray-500">
              and <%= subscription.users.length - 5 %> more subscribers
            </span>
          </div>
          <% } %>
        </div>
      </div>
    </div>
    <% } %>
  </div>
</div>

<script>
function copySubscriptionLink() {
  const link = window.location.origin + '/subscriptions/<%= subscription.id %>';
  navigator.clipboard.writeText(link).then(function() {
    // Simple feedback - you could enhance this with a toast notification
    const button = event.target.closest('button');
    const originalText = button.innerHTML;
    button.innerHTML = '<i class="fas fa-check mr-2"></i>Copied!';
    button.classList.remove('bg-gray-100', 'hover:bg-gray-200');
    button.classList.add('bg-green-100', 'text-green-700');
    
    setTimeout(() => {
      button.innerHTML = originalText;
      button.classList.add('bg-gray-100', 'hover:bg-gray-200');
      button.classList.remove('bg-green-100', 'text-green-700');
    }, 2000);
  });
}

function deleteSubscription() {
  if (confirm('Are you sure you want to delete this subscription plan? This action cannot be undone.')) {
    fetch('/dashboard/subscriptions/<%= subscription.id %>', {
      method: 'DELETE',
      headers: {
        'Content-Type': 'application/json',
      }
    })
    .then(response => response.json())
    .then(data => {
      if (data.success) {
        window.location.href = '/dashboard/subscriptions';
      } else {
        alert('Error deleting subscription: ' + (data.error || 'Unknown error'));
      }
    })
    .catch(error => {
      console.error('Error:', error);
      alert('Error deleting subscription');
    });
  }
}
</script>

</body>
</html>