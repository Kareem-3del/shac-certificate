<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Subscriptions Dashboard - Admin Panel</title>
    <link href="https://cdn.jsdelivr.net/npm/tailwindcss@2.2.19/dist/tailwind.min.css" rel="stylesheet">
    <link href="https://fonts.googleapis.com/css2?family=Inter:wght@300;400;500;600;700&display=swap" rel="stylesheet">
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.0.0/css/all.min.css">
    <style>
        :root {
            --color-primary: 59 130 246;
            --color-secondary: 99 102 241;
            --color-accent: 34 197 94;
            --color-background: 249 250 251;
            --color-surface: 255 255 255;
        }
        
        * {
            font-family: "Inter", sans-serif;
        }
        
        .gradient-bg {
            background: linear-gradient(135deg, rgb(var(--color-primary)) 0%, rgb(var(--color-secondary)) 100%);
        }
        
        .card-hover {
            transition: all 0.3s ease;
        }
        .card-hover:hover {
            transform: translateY(-2px);
            box-shadow: 0 8px 25px rgba(0,0,0,0.15);
        }
        
        .animate-fade-in {
            animation: fadeIn 0.6s ease-out;
        }
        @keyframes fadeIn {
            from { opacity: 0; transform: translateY(20px); }
            to { opacity: 1; transform: translateY(0); }
        }
        
        .stat-card {
            background: linear-gradient(135deg, rgb(var(--color-surface)) 0%, rgb(248 250 252) 100%);
            border: 1px solid rgb(226 232 240);
        }
        
        .nav-item {
            transition: all 0.2s ease;
        }
        .nav-item:hover {
            background-color: rgb(241 245 249);
            border-left: 4px solid rgb(var(--color-primary));
        }
        .nav-item.active {
            background-color: rgb(239 246 255);
            border-left: 4px solid rgb(37 99 235);
            color: rgb(29 78 216);
        }
    </style>
</head>
<body class="min-h-screen" style="background-color: rgb(var(--color-background))">
    <!-- Top Navigation -->
    <nav class="shadow-sm border-b fixed w-full top-0 z-50" style="background-color: rgb(var(--color-surface)); border-color: rgb(229 231 235)">
        <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8">
            <div class="flex justify-between h-16">
                <div class="flex items-center">
                    <img class="h-8 w-auto" src="https://shacpr.org.sa/images/sha.png" alt="SHA Logo">
                    <div class="ml-4">
                        <h1 class="text-xl font-semibold text-gray-900">Admin Dashboard</h1>
                    </div>
                </div>
                
                <div class="flex items-center space-x-4">
                    <div class="flex items-center space-x-2">
                        <div class="w-2 h-2 bg-green-400 rounded-full animate-pulse"></div>
                        <span class="text-sm text-gray-500">Live</span>
                    </div>
                    <div class="text-sm text-gray-600">
                        <i class="fas fa-calendar mr-1"></i>
                        <span id="currentDate"></span>
                    </div>
                    <a href="/" class="text-gray-600 hover:text-gray-900 px-3 py-2 rounded-md text-sm font-medium">
                        <i class="fas fa-home mr-1"></i>Main Site
                    </a>
                    <a href="/auth/logout" class="bg-red-600 hover:bg-red-700 text-white px-4 py-2 rounded-md text-sm font-medium">
                        <i class="fas fa-sign-out-alt mr-1"></i>Logout
                    </a>
                </div>
            </div>
        </div>
    </nav>

    <div class="flex pt-16">
        <!-- Sidebar -->
        <nav class="w-64 min-h-screen shadow-lg" style="background-color: rgb(var(--color-surface))">
            <div class="p-6">
                <div class="flex items-center space-x-3">
                    <img class="h-8 w-8" src="https://shacpr.org.sa/images/sha.png" alt="SHA Logo">
                    <h1 class="text-xl font-bold gradient-bg bg-clip-text text-transparent">Admin Dashboard</h1>
                </div>
            </div>
            
            <ul class="mt-6 px-4 space-y-1">
                <!-- Main Navigation -->
                <li>
                    <a href="/dashboard" class="flex items-center px-4 py-3 text-sm font-medium text-gray-700 hover:bg-blue-50 hover:text-blue-600 transition-colors rounded-lg">
                        <i class="fas fa-tachometer-alt w-5 h-5 mr-3"></i>
                        Dashboard Overview
                    </a>
                </li>
                
                <!-- Analytics Section -->
                <li class="pt-4">
                    <div class="px-4 text-xs font-semibold text-gray-400 uppercase tracking-wider mb-2">Analytics</div>
                </li>
                <li>
                    <a href="/dashboard/transactions" class="flex items-center px-4 py-3 text-sm font-medium text-gray-700 hover:bg-blue-50 hover:text-blue-600 transition-colors rounded-lg">
                        <i class="fas fa-credit-card w-5 h-5 mr-3"></i>
                        Transactions
                    </a>
                </li>

                <!-- Management Section -->
                <li class="pt-4">
                    <div class="px-4 text-xs font-semibold text-gray-400 uppercase tracking-wider mb-2">Management</div>
                </li>
                <li>
                    <a href="/dashboard/certificates" class="flex items-center px-4 py-3 text-sm font-medium text-gray-700 hover:bg-blue-50 hover:text-blue-600 transition-colors rounded-lg">
                        <i class="fas fa-certificate w-5 h-5 mr-3"></i>
                        Certificates
                    </a>
                </li>
                <li>
                    <a href="/dashboard/users" class="flex items-center px-4 py-3 text-sm font-medium text-gray-700 hover:bg-blue-50 hover:text-blue-600 transition-colors rounded-lg">
                        <i class="fas fa-users w-5 h-5 mr-3"></i>
                        User Management
                    </a>
                </li>
                <li>
                    <a href="/dashboard/subscriptions" class="flex items-center px-4 py-3 text-sm font-medium text-gray-700 hover:bg-blue-50 hover:text-blue-600 transition-colors rounded-lg nav-active" style="color: rgb(37 99 235); background-color: rgb(219 234 254); border-right: 2px solid rgb(37 99 235);">
                        <i class="fas fa-crown w-5 h-5 mr-3"></i>
                        Subscriptions
                    </a>
                </li>
                <li>
                    <a href="/dashboard/templates" class="flex items-center px-4 py-3 text-sm font-medium text-gray-700 hover:bg-blue-50 hover:text-blue-600 transition-colors rounded-lg">
                        <i class="fas fa-file-alt w-5 h-5 mr-3"></i>
                        Certificate Templates
                    </a>
                </li>

                <!-- System Section -->
                <li class="pt-4">
                    <div class="px-4 text-xs font-semibold text-gray-400 uppercase tracking-wider mb-2">System</div>
                </li>
                <li>
                    <a href="/dashboard/settings" class="flex items-center px-4 py-3 text-sm font-medium text-gray-700 hover:bg-blue-50 hover:text-blue-600 transition-colors rounded-lg">
                        <i class="fas fa-cog w-5 h-5 mr-3"></i>
                        System Settings
                    </a>
                </li>
                <li>
                    <a href="/dashboard/email" class="flex items-center px-4 py-3 text-sm font-medium text-gray-700 hover:bg-blue-50 hover:text-blue-600 transition-colors rounded-lg">
                        <i class="fas fa-envelope w-5 h-5 mr-3"></i>
                        Bulk Email
                    </a>
                </li>
                <li>
                    <a href="/dashboard/audit" class="flex items-center px-4 py-3 text-sm font-medium text-gray-700 hover:bg-blue-50 hover:text-blue-600 transition-colors rounded-lg">
                        <i class="fas fa-clipboard-list w-5 h-5 mr-3"></i>
                        Audit Logs
                    </a>
                </li>
            </ul>
            
            <!-- User Info Section at Bottom -->
            <div class="absolute bottom-0 left-0 right-0 p-6 border-t" style="border-color: rgb(229 231 235)">
                <div class="flex items-center space-x-3">
                    <div class="w-10 h-10 rounded-full gradient-bg flex items-center justify-center">
                        <span class="text-white text-sm font-medium"><%= user.username.charAt(0).toUpperCase() %></span>
                    </div>
                    <div class="flex-1">
                        <p class="text-sm font-medium text-gray-900"><%= user.username %></p>
                        <p class="text-xs capitalize" style="color: rgb(107 114 128)"><%= user.role %></p>
                    </div>
                    <a href="/logout" class="text-gray-400 hover:text-gray-600">
                        <svg class="w-5 h-5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M17 16l4-4m0 0l-4-4m4 4H7m6 4v1a3 3 0 01-3 3H6a3 3 0 01-3-3V7a3 3 0 013-3h4a3 3 0 013 3v1"></path>
                        </svg>
                    </a>
                </div>
            </div>
        </nav>

        <!-- Main Content -->
        <div class="flex-1 p-8">
            <!-- Page Header -->
            <div class="mb-8">
                <nav class="mb-4">
                    <ol class="flex space-x-2 text-sm text-gray-500">
                        <li><a href="/dashboard" class="hover:text-gray-700">Dashboard</a></li>
                        <li><span class="mx-2">/</span></li>
                        <li class="text-gray-900">Subscriptions</li>
                    </ol>
                </nav>
                
                <div class="flex items-center justify-between">
                    <div>
                        <h1 class="text-2xl font-bold text-gray-900">Subscription Management</h1>
                        <p class="mt-1 text-sm text-gray-600">Monitor and manage subscription plans and user subscriptions</p>
                    </div>
                </div>
            </div>

            <!-- Subscription Stats -->
            <div class="grid grid-cols-1 md:grid-cols-4 gap-6 mb-8 animate-fade-in">
                <div class="stat-card rounded-xl shadow-sm p-6 card-hover">
                    <div class="flex items-center justify-between">
                        <div>
                            <p class="text-sm font-medium text-gray-600">Active Subscriptions</p>
                            <p class="text-3xl font-bold text-green-600"><%= subscriptionStats.activeSubscriptions %></p>
                            <p class="text-xs text-gray-500 mt-1">Total active subscriptions</p>
                        </div>
                        <div class="bg-green-100 p-3 rounded-full">
                            <i class="fas fa-crown text-green-600 text-xl"></i>
                        </div>
                    </div>
                </div>
                <div class="stat-card rounded-xl shadow-sm p-6 card-hover">
                    <div class="flex items-center justify-between">
                        <div>
                            <p class="text-sm font-medium text-gray-600">Monthly Revenue</p>
                            <p class="text-3xl font-bold text-blue-600">$<%= subscriptionStats.monthlyRevenue.toLocaleString() %></p>
                            <p class="text-xs text-gray-500 mt-1">Total subscription revenue</p>
                        </div>
                        <div class="bg-blue-100 p-3 rounded-full">
                            <i class="fas fa-dollar-sign text-blue-600 text-xl"></i>
                        </div>
                    </div>
                </div>
                <div class="stat-card rounded-xl shadow-sm p-6 card-hover">
                    <div class="flex items-center justify-between">
                        <div>
                            <p class="text-sm font-medium text-gray-600">New Subscribers</p>
                            <p class="text-3xl font-bold text-purple-600"><%= subscriptionStats.newSubscribers %></p>
                            <p class="text-xs text-gray-500 mt-1">This month</p>
                        </div>
                        <div class="bg-purple-100 p-3 rounded-full">
                            <i class="fas fa-user-plus text-purple-600 text-xl"></i>
                        </div>
                    </div>
                </div>
                <div class="stat-card rounded-xl shadow-sm p-6 card-hover">
                    <div class="flex items-center justify-between">
                        <div>
                            <p class="text-sm font-medium text-gray-600">Churn Rate</p>
                            <p class="text-3xl font-bold text-orange-600"><%= subscriptionStats.churnRate %>%</p>
                            <p class="text-xs text-gray-500 mt-1">Customer retention</p>
                        </div>
                        <div class="bg-orange-100 p-3 rounded-full">
                            <i class="fas fa-chart-line text-orange-600 text-xl"></i>
                        </div>
                    </div>
                </div>
            </div>

            <!-- Subscription Plans -->
            <div class="grid grid-cols-1 lg:grid-cols-2 gap-8 mb-8">
                <!-- Subscription Plans Overview -->
                <div class="bg-white rounded-xl shadow-sm p-6 card-hover">
                    <div class="flex justify-between items-center mb-6">
                        <h3 class="text-lg font-semibold text-gray-900">Subscription Plans</h3>
                        <a href="/dashboard/subscriptions/create" class="px-4 py-2 bg-blue-600 text-white rounded-lg hover:bg-blue-700 transition-colors inline-block">
                            <i class="fas fa-plus mr-2"></i>New Plan
                        </a>
                    </div>
                    <div class="space-y-4">
                        <% if (subscriptions && subscriptions.length > 0) { %>
                            <% subscriptions.forEach(subscription => { %>
                                <div class="p-4 border border-gray-200 rounded-lg">
                                    <div class="flex justify-between items-center">
                                        <div>
                                            <h4 class="font-medium text-gray-900"><%= subscription.name %></h4>
                                            <p class="text-sm text-gray-500">$<%= subscription.price %></p>
                                        </div>
                                        <div class="text-right">
                                            <p class="font-bold text-gray-900"><%= subscription.purchased %> subscribers</p>
                                            <p class="text-sm text-green-600"><%= subscription.points %> points</p>
                                            <div class="mt-2 space-x-2">
                                                <a href="/dashboard/subscriptions/<%= subscription.id %>" class="text-blue-600 hover:text-blue-800 text-sm">
                                                    <i class="fas fa-eye mr-1"></i>View
                                                </a>
                                                <a href="/dashboard/subscriptions/<%= subscription.id %>/edit" class="text-green-600 hover:text-green-800 text-sm">
                                                    <i class="fas fa-edit mr-1"></i>Edit
                                                </a>
                                                <button onclick="deleteSubscription(<%= subscription.id %>)" class="text-red-600 hover:text-red-800 text-sm">
                                                    <i class="fas fa-trash mr-1"></i>Delete
                                                </button>
                                            </div>
                                        </div>
                                    </div>
                                </div>
                            <% }); %>
                        <% } else { %>
                            <div class="p-4 border border-gray-200 rounded-lg text-center">
                                <p class="text-gray-500">No subscription plans available</p>
                            </div>
                        <% } %>
                    </div>
                </div>

                <!-- Recent Subscription Activity -->
                <div class="bg-white rounded-xl shadow-sm p-6 card-hover">
                    <h3 class="text-lg font-semibold text-gray-900 mb-6">Recent Activity</h3>
                    <div class="space-y-4">
                        <% if (recentSubscriptions && recentSubscriptions.length > 0) { %>
                            <% recentSubscriptions.slice(0, 5).forEach(subscription => { %>
                                <div class="flex items-center p-3 bg-green-50 rounded-lg">
                                    <div class="w-8 h-8 bg-green-100 rounded-full flex items-center justify-center mr-3">
                                        <i class="fas fa-crown text-green-600 text-sm"></i>
                                    </div>
                                    <div>
                                        <p class="text-sm font-medium text-gray-900"><%= subscription.name %></p>
                                        <p class="text-xs text-gray-500">$<%= subscription.price %> - <%= subscription.purchased %> subscribers</p>
                                    </div>
                                </div>
                            <% }); %>
                        <% } else { %>
                            <div class="p-3 bg-gray-50 rounded-lg text-center">
                                <p class="text-sm text-gray-500">No recent subscription activity</p>
                            </div>
                        <% } %>
                    </div>
                </div>
            </div>

            <!-- Quick Actions -->
            <div class="bg-white rounded-xl shadow-sm p-6 card-hover">
                <h3 class="text-lg font-semibold text-gray-900 mb-6">Quick Actions</h3>
                <div class="grid grid-cols-1 md:grid-cols-3 gap-4">
                    <a href="/dashboard/subscriptions/list" class="flex items-center justify-center p-4 border border-gray-200 rounded-lg hover:bg-gray-50 transition-colors">
                        <i class="fas fa-list mr-3 text-blue-600"></i>
                        <span class="font-medium text-gray-700">View All Subscriptions</span>
                    </a>
                    <a href="/dashboard/subscriptions/create" class="flex items-center justify-center p-4 border border-gray-200 rounded-lg hover:bg-gray-50 transition-colors">
                        <i class="fas fa-plus mr-3 text-green-600"></i>
                        <span class="font-medium text-gray-700">Create New Plan</span>
                    </a>
                    <a href="/dashboard/subscriptions/export" class="flex items-center justify-center p-4 border border-gray-200 rounded-lg hover:bg-gray-50 transition-colors">
                        <i class="fas fa-download mr-3 text-purple-600"></i>
                        <span class="font-medium text-gray-700">Export Reports</span>
                    </a>
                </div>
            </div>
        </div>
    </div>

    <script>
        function updateCurrentDate() {
            const now = new Date();
            document.getElementById('currentDate').textContent = now.toLocaleDateString('en-US', {
                weekday: 'short',
                year: 'numeric',
                month: 'short',
                day: 'numeric'
            });
        }
        updateCurrentDate();

        function deleteSubscription(subscriptionId) {
            if (confirm('Are you sure you want to delete this subscription? This action cannot be undone.')) {
                fetch(`/dashboard/subscriptions/${subscriptionId}`, {
                    method: 'DELETE',
                    headers: {
                        'Content-Type': 'application/json',
                    }
                })
                .then(response => {
                    if (response.ok) {
                        location.reload();
                    } else {
                        alert('Failed to delete subscription. Please try again.');
                    }
                })
                .catch(error => {
                    console.error('Error:', error);
                    alert('An error occurred while deleting the subscription.');
                });
            }
        }

        // Update current date
        const now = new Date();
        const dateString = now.toLocaleDateString('en-US', {
            weekday: 'long',
            year: 'numeric', 
            month: 'long',
            day: 'numeric'
        });
        const dateElement = document.getElementById('currentDate');
        if (dateElement) {
            dateElement.textContent = dateString;
        }
    </script>

    </div>
  </div>

</body>
</html>