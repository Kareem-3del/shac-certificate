<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Analytics Dashboard - Admin Panel</title>
    <link href="https://cdn.jsdelivr.net/npm/tailwindcss@2.2.19/dist/tailwind.min.css" rel="stylesheet">
    <link href="https://fonts.googleapis.com/css2?family=Inter:wght@300;400;500;600;700&display=swap" rel="stylesheet">
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.0.0/css/all.min.css">
    <script src="https://cdn.jsdelivr.net/npm/chart.js"></script>
    <style>
        :root {
            --color-primary: 59 130 246;
            --color-secondary: 99 102 241;
            --color-accent: 34 197 94;
            --color-background: 249 250 251;
            --color-surface: 255 255 255;
        }
        
        * {
            font-family: "Inter", sans-serif;
        }
        
        .gradient-bg {
            background: linear-gradient(135deg, rgb(var(--color-primary)) 0%, rgb(var(--color-secondary)) 100%);
        }
        
        .card-hover {
            transition: all 0.3s ease;
        }
        .card-hover:hover {
            transform: translateY(-2px);
            box-shadow: 0 8px 25px rgba(0,0,0,0.15);
        }
        
        .animate-fade-in {
            animation: fadeIn 0.6s ease-out;
        }
        @keyframes fadeIn {
            from { opacity: 0; transform: translateY(20px); }
            to { opacity: 1; transform: translateY(0); }
        }
        
        .stat-card {
            background: linear-gradient(135deg, rgb(var(--color-surface)) 0%, rgb(248 250 252) 100%);
            border: 1px solid rgb(226 232 240);
        }
        
        .nav-item {
            transition: all 0.2s ease;
        }
        .nav-item:hover {
            background-color: rgb(241 245 249);
            border-left: 4px solid rgb(var(--color-primary));
        }
        .nav-item.active {
            background-color: rgb(239 246 255);
            border-left: 4px solid rgb(37 99 235);
            color: rgb(29 78 216);
        }
    </style>
</head>
<body class="min-h-screen" style="background-color: rgb(var(--color-background))">
    <!-- Top Navigation -->
    <nav class="shadow-sm border-b fixed w-full top-0 z-50" style="background-color: rgb(var(--color-surface)); border-color: rgb(229 231 235)">
        <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8">
            <div class="flex justify-between h-16">
                <div class="flex items-center">
                    <img class="h-8 w-auto" src="https://shacpr.org.sa/images/sha.png" alt="SHA Logo">
                    <div class="ml-4">
                        <h1 class="text-xl font-semibold text-gray-900">Analytics & Reports</h1>
                    </div>
                </div>
                
                <div class="flex items-center space-x-4">
                    <div class="flex items-center space-x-2">
                        <div class="w-2 h-2 bg-green-400 rounded-full animate-pulse"></div>
                        <span class="text-sm text-gray-500">Live</span>
                    </div>
                    <div class="text-sm text-gray-600">
                        <i class="fas fa-calendar mr-1"></i>
                        <span id="currentDate"></span>
                    </div>
                    <a href="/" class="text-gray-600 hover:text-gray-900 px-3 py-2 rounded-md text-sm font-medium">
                        <i class="fas fa-home mr-1"></i>Main Site
                    </a>
                    <a href="/auth/logout" class="bg-red-600 hover:bg-red-700 text-white px-4 py-2 rounded-md text-sm font-medium">
                        <i class="fas fa-sign-out-alt mr-1"></i>Logout
                    </a>
                </div>
            </div>
        </div>
    </nav>

    <div class="flex pt-16">
        <!-- Sidebar Navigation -->
        <div class="w-64 shadow-sm border-r min-h-screen" style="background-color: rgb(var(--color-surface)); border-color: rgb(229 231 235)">
            <div class="p-6">
                <nav class="space-y-2">
                    <a href="/dashboard" class="nav-item flex items-center px-4 py-3 text-sm font-medium rounded-lg text-gray-700">
                        <i class="fas fa-tachometer-alt mr-3 text-lg"></i>
                        Dashboard Overview
                    </a>
                    <a href="/dashboard/certificates" class="nav-item flex items-center px-4 py-3 text-sm font-medium rounded-lg text-gray-700">
                        <i class="fas fa-certificate mr-3 text-lg"></i>
                        Certificate Management
                    </a>
                    <a href="/dashboard/users" class="nav-item flex items-center px-4 py-3 text-sm font-medium rounded-lg text-gray-700">
                        <i class="fas fa-users mr-3 text-lg"></i>
                        User Management
                    </a>
                    <a href="/dashboard/analytics" class="nav-item active flex items-center px-4 py-3 text-sm font-medium rounded-lg">
                        <i class="fas fa-chart-line mr-3 text-lg"></i>
                        Analytics & Reports
                    </a>
                    <a href="/dashboard/subscriptions" class="nav-item flex items-center px-4 py-3 text-sm font-medium rounded-lg text-gray-700">
                        <i class="fas fa-crown mr-3 text-lg"></i>
                        Subscriptions
                    </a>
                    <a href="/dashboard/settings" class="nav-item flex items-center px-4 py-3 text-sm font-medium rounded-lg text-gray-700">
                        <i class="fas fa-cog mr-3 text-lg"></i>
                        System Settings
                    </a>
                    <a href="/dashboard/email" class="nav-item flex items-center px-4 py-3 text-sm font-medium rounded-lg text-gray-700">
                        <i class="fas fa-envelope mr-3 text-lg"></i>
                        Bulk Email
                    </a>
                    <a href="/dashboard/transactions" class="nav-item flex items-center px-4 py-3 text-sm font-medium rounded-lg text-gray-700">
                        <i class="fas fa-credit-card mr-3 text-lg"></i>
                        Transactions
                    </a>
                    <a href="/dashboard/audit" class="nav-item flex items-center px-4 py-3 text-sm font-medium rounded-lg text-gray-700">
                        <i class="fas fa-clipboard-list mr-3 text-lg"></i>
                        Audit Logs
                    </a>
                    <a href="/dashboard/advertising" class="nav-item flex items-center px-4 py-3 text-sm font-medium rounded-lg text-gray-700">
                        <i class="fas fa-bullhorn mr-3 text-lg"></i>
                        Ad Campaign ROI
                    </a>
                </nav>
            </div>
        </div>

        <!-- Main Content -->
        <div class="flex-1 p-8">
            <!-- Dashboard Header -->
            <div class="mb-8 animate-fade-in">
                <h2 class="text-3xl font-bold text-gray-900 mb-2">Analytics & Reports</h2>
                <p class="text-gray-600">Comprehensive analytics and performance insights</p>
            </div>

            <!-- Analytics Stats -->
            <div class="grid grid-cols-1 md:grid-cols-4 gap-6 mb-8 animate-fade-in">
                <div class="stat-card rounded-xl shadow-sm p-6 card-hover">
                    <div class="flex items-center justify-between">
                        <div>
                            <p class="text-sm font-medium text-gray-600">Total Users</p>
                            <p class="text-3xl font-bold text-blue-600"><%= overview.users.total %></p>
                            <p class="text-xs text-gray-500 mt-1"><span class="text-green-500">+<%= overview.users.growth %></span> today</p>
                        </div>
                        <div class="bg-blue-100 p-3 rounded-full">
                            <i class="fas fa-users text-blue-600 text-xl"></i>
                        </div>
                    </div>
                </div>
                <div class="stat-card rounded-xl shadow-sm p-6 card-hover">
                    <div class="flex items-center justify-between">
                        <div>
                            <p class="text-sm font-medium text-gray-600">Revenue</p>
                            <p class="text-3xl font-bold text-green-600">$<%= overview.revenue.total.toLocaleString() %></p>
                            <p class="text-xs text-gray-500 mt-1"><span class="<%= overview.revenue.growth >= 0 ? 'text-green-500' : 'text-red-500' %>"><%= overview.revenue.growth >= 0 ? '+' : '' %><%= overview.revenue.growth %>%</span> from last period</p>
                        </div>
                        <div class="bg-green-100 p-3 rounded-full">
                            <i class="fas fa-dollar-sign text-green-600 text-xl"></i>
                        </div>
                    </div>
                </div>
                <div class="stat-card rounded-xl shadow-sm p-6 card-hover">
                    <div class="flex items-center justify-between">
                        <div>
                            <p class="text-sm font-medium text-gray-600">Active Certificates</p>
                            <p class="text-3xl font-bold text-orange-600"><%= overview.certificates.total %></p>
                            <p class="text-xs text-gray-500 mt-1"><span class="<%= overview.certificates.growth >= 0 ? 'text-green-500' : 'text-red-500' %>"><%= overview.certificates.growth >= 0 ? '+' : '' %><%= overview.certificates.growth %></span> this period</p>
                        </div>
                        <div class="bg-orange-100 p-3 rounded-full">
                            <i class="fas fa-certificate text-orange-600 text-xl"></i>
                        </div>
                    </div>
                </div>
                <div class="stat-card rounded-xl shadow-sm p-6 card-hover">
                    <div class="flex items-center justify-between">
                        <div>
                            <p class="text-sm font-medium text-gray-600">Ad ROI</p>
                            <p class="text-3xl font-bold text-purple-600"><%= overview.advertising.roi.toFixed(1) %>%</p>
                            <p class="text-xs text-gray-500 mt-1"><span class="<%= overview.advertising.growth >= 0 ? 'text-green-500' : 'text-red-500' %>"><%= overview.advertising.growth >= 0 ? '+' : '' %><%= overview.advertising.growth.toFixed(1) %>%</span> vs last period</p>
                        </div>
                        <div class="bg-purple-100 p-3 rounded-full">
                            <i class="fas fa-percentage text-purple-600 text-xl"></i>
                        </div>
                    </div>
                </div>
            </div>

            <!-- Analytics Charts -->
            <div class="grid grid-cols-1 lg:grid-cols-2 gap-8 mb-8">
                <!-- Certificate Generation Chart -->
                <div class="bg-white rounded-xl shadow-sm p-6 card-hover">
                    <div class="flex justify-between items-center mb-6">
                        <h3 class="text-lg font-semibold text-gray-900">Certificate Generation</h3>
                        <div class="flex space-x-2">
                            <button class="px-3 py-1 text-xs font-medium text-blue-600 bg-blue-100 rounded-full">30 Days</button>
                        </div>
                    </div>
                    <div style="height: 300px;">
                        <canvas id="trafficChart"></canvas>
                    </div>
                </div>

                <!-- Revenue Chart -->
                <div class="bg-white rounded-xl shadow-sm p-6 card-hover">
                    <div class="flex justify-between items-center mb-6">
                        <h3 class="text-lg font-semibold text-gray-900">Revenue Analytics</h3>
                        <div class="flex space-x-2">
                            <button class="px-3 py-1 text-xs font-medium text-green-600 bg-green-100 rounded-full">30 Days</button>
                        </div>
                    </div>
                    <div style="height: 300px;">
                        <canvas id="revenueChart"></canvas>
                    </div>
                </div>
            </div>

            <!-- Top Pages & Sources -->
            <div class="grid grid-cols-1 lg:grid-cols-2 gap-8">
                <!-- Top Pages -->
                <div class="bg-white rounded-xl shadow-sm p-6 card-hover">
                    <h3 class="text-lg font-semibold text-gray-900 mb-6">Top Pages</h3>
                    <div class="space-y-4">
                        <div class="flex items-center justify-between p-3 bg-gray-50 rounded-lg">
                            <div>
                                <p class="font-medium text-gray-900">/certificates/generate</p>
                                <p class="text-sm text-gray-500">Certificate Generation</p>
                            </div>
                            <div class="text-right">
                                <p class="font-bold text-gray-900">18,543</p>
                                <p class="text-sm text-green-600">+15.2%</p>
                            </div>
                        </div>
                        <div class="flex items-center justify-between p-3 bg-gray-50 rounded-lg">
                            <div>
                                <p class="font-medium text-gray-900">/dashboard</p>
                                <p class="text-sm text-gray-500">Dashboard Home</p>
                            </div>
                            <div class="text-right">
                                <p class="font-bold text-gray-900">12,876</p>
                                <p class="text-sm text-green-600">+8.7%</p>
                            </div>
                        </div>
                        <div class="flex items-center justify-between p-3 bg-gray-50 rounded-lg">
                            <div>
                                <p class="font-medium text-gray-900">/</p>
                                <p class="text-sm text-gray-500">Homepage</p>
                            </div>
                            <div class="text-right">
                                <p class="font-bold text-gray-900">9,234</p>
                                <p class="text-sm text-red-600">-2.1%</p>
                            </div>
                        </div>
                    </div>
                </div>

                <!-- Traffic Sources -->
                <div class="bg-white rounded-xl shadow-sm p-6 card-hover">
                    <h3 class="text-lg font-semibold text-gray-900 mb-6">Traffic Sources</h3>
                    <div class="space-y-4">
                        <div class="flex items-center justify-between">
                            <div class="flex items-center">
                                <div class="w-3 h-3 bg-blue-500 rounded-full mr-3"></div>
                                <span class="text-gray-700">Direct</span>
                            </div>
                            <span class="font-medium text-gray-900">42.3%</span>
                        </div>
                        <div class="flex items-center justify-between">
                            <div class="flex items-center">
                                <div class="w-3 h-3 bg-green-500 rounded-full mr-3"></div>
                                <span class="text-gray-700">Search Engines</span>
                            </div>
                            <span class="font-medium text-gray-900">31.2%</span>
                        </div>
                        <div class="flex items-center justify-between">
                            <div class="flex items-center">
                                <div class="w-3 h-3 bg-orange-500 rounded-full mr-3"></div>
                                <span class="text-gray-700">Social Media</span>
                            </div>
                            <span class="font-medium text-gray-900">18.7%</span>
                        </div>
                        <div class="flex items-center justify-between">
                            <div class="flex items-center">
                                <div class="w-3 h-3 bg-purple-500 rounded-full mr-3"></div>
                                <span class="text-gray-700">Referrals</span>
                            </div>
                            <span class="font-medium text-gray-900">7.8%</span>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>

    <script>
        function updateCurrentDate() {
            const now = new Date();
            document.getElementById('currentDate').textContent = now.toLocaleDateString('en-US', {
                weekday: 'short',
                year: 'numeric',
                month: 'short',
                day: 'numeric'
            });
        }
        updateCurrentDate();

        // Certificate Generation Chart
        const trafficCtx = document.getElementById('trafficChart').getContext('2d');
        new Chart(trafficCtx, {
            type: 'line',
            data: {
                labels: <%- JSON.stringify(certificatesChart.labels) %>,
                datasets: [{
                    label: 'Certificates Generated',
                    data: <%- JSON.stringify(certificatesChart.data) %>,
                    borderColor: 'rgb(59, 130, 246)',
                    backgroundColor: 'rgba(59, 130, 246, 0.1)',
                    tension: 0.4,
                    fill: true
                }]
            },
            options: {
                responsive: true,
                maintainAspectRatio: false,
                plugins: {
                    legend: {
                        display: false
                    }
                },
                scales: {
                    y: {
                        beginAtZero: true,
                        grid: {
                            color: 'rgba(0, 0, 0, 0.1)'
                        }
                    },
                    x: {
                        grid: {
                            display: false
                        }
                    }
                }
            }
        });

        // Revenue Chart
        const revenueCtx = document.getElementById('revenueChart').getContext('2d');
        new Chart(revenueCtx, {
            type: 'bar',
            data: {
                labels: <%- JSON.stringify(revenueChart.labels) %>,
                datasets: [{
                    label: 'Revenue',
                    data: <%- JSON.stringify(revenueChart.data) %>,
                    backgroundColor: 'rgba(34, 197, 94, 0.8)',
                    borderColor: 'rgb(34, 197, 94)',
                    borderWidth: 1
                }]
            },
            options: {
                responsive: true,
                maintainAspectRatio: false,
                plugins: {
                    legend: {
                        display: false
                    }
                },
                scales: {
                    y: {
                        beginAtZero: true,
                        grid: {
                            color: 'rgba(0, 0, 0, 0.1)'
                        }
                    },
                    x: {
                        grid: {
                            display: false
                        }
                    }
                }
            }
        });
    </script>
</body>
</html>