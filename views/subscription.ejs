<!doctype html>
<html lang="en">
<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1">
  <title><%= sub.name %> - Professional Certification</title>
  <link href="https://cdn.jsdelivr.net/npm/tailwindcss@2.2.19/dist/tailwind.min.css" rel="stylesheet">
  <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.0.0/css/all.min.css">
  <script src="https://unpkg.com/lucide@latest/dist/umd/lucide.js"></script>
  <style>
    * {
      margin: 0;
      padding: 0;
      box-sizing: border-box;
    }
    
    body {
      font-family: 'Inter', -apple-system, BlinkMacSystemFont, 'Segoe UI', sans-serif;
      background: linear-gradient(135deg, #f8fafc 0%, #e2e8f0 100%);
      line-height: 1.6;
      color: #1a202c;
    }
    
    .container {
      max-width: 1200px;
      margin: 0 auto;
      padding: 0 1rem;
    }
    
    .card {
      background: white;
      border-radius: 16px;
      box-shadow: 0 4px 6px -1px rgba(0, 0, 0, 0.1), 0 2px 4px -1px rgba(0, 0, 0, 0.06);
      border: 1px solid #e2e8f0;
      transition: all 0.3s ease;
    }
    
    .card:hover {
      box-shadow: 0 20px 25px -5px rgba(0, 0, 0, 0.1), 0 10px 10px -5px rgba(0, 0, 0, 0.04);
      transform: translateY(-2px);
    }
    
    .btn-primary {
      background: linear-gradient(135deg, #3b82f6 0%, #1d4ed8 100%);
      color: white;
      padding: 1rem 2rem;
      border: none;
      border-radius: 12px;
      font-weight: 600;
      font-size: 1.1rem;
      cursor: pointer;
      transition: all 0.3s ease;
      width: 100%;
      position: relative;
      overflow: hidden;
    }
    
    .btn-primary:hover {
      transform: translateY(-2px);
      box-shadow: 0 10px 25px rgba(59, 130, 246, 0.3);
    }
    
    .btn-primary:active {
      transform: translateY(0);
    }
    
    .btn-primary::before {
      content: '';
      position: absolute;
      top: 0;
      left: -100%;
      width: 100%;
      height: 100%;
      background: linear-gradient(90deg, transparent, rgba(255,255,255,0.2), transparent);
      transition: left 0.5s;
    }
    
    .btn-primary:hover::before {
      left: 100%;
    }
    
    .form-input {
      width: 100%;
      padding: 0.875rem 1rem;
      border: 2px solid #e2e8f0;
      border-radius: 8px;
      font-size: 1rem;
      transition: all 0.2s ease;
      background: #fafafa;
    }
    
    .form-input:focus {
      outline: none;
      border-color: #3b82f6;
      background: white;
      box-shadow: 0 0 0 3px rgba(59, 130, 246, 0.1);
    }
    
    .form-label {
      display: block;
      font-weight: 600;
      color: #374151;
      margin-bottom: 0.5rem;
      font-size: 0.95rem;
    }
    
    .badge {
      display: inline-flex;
      align-items: center;
      padding: 0.5rem 1rem;
      background: #eff6ff;
      color: #1d4ed8;
      border-radius: 50px;
      font-size: 0.875rem;
      font-weight: 600;
      border: 1px solid #bfdbfe;
    }
    
    .feature-item {
      display: flex;
      align-items: center;
      padding: 1rem 0;
      border-bottom: 1px solid #f1f5f9;
    }
    
    .feature-item:last-child {
      border-bottom: none;
    }
    
    .feature-icon {
      width: 2.5rem;
      height: 2.5rem;
      background: linear-gradient(135deg, #3b82f6 0%, #1d4ed8 100%);
      border-radius: 8px;
      display: flex;
      align-items: center;
      justify-content: center;
      margin-right: 1rem;
      flex-shrink: 0;
    }
    
    .stat-item {
      text-align: center;
      padding: 1.5rem;
    }
    
    .stat-number {
      font-size: 2rem;
      font-weight: 700;
      color: #1d4ed8;
      display: block;
    }
    
    .stat-label {
      color: #64748b;
      font-size: 0.875rem;
      font-weight: 500;
      margin-top: 0.25rem;
    }
    
    .price-display {
      font-size: 3rem;
      font-weight: 800;
      color: #1a202c;
      line-height: 1;
    }
    
    .price-currency {
      font-size: 1.5rem;
      color: #64748b;
      font-weight: 600;
    }
    
    .summary-item {
      display: flex;
      justify-content: between;
      align-items: center;
      padding: 0.75rem 0;
      border-bottom: 1px solid #f1f5f9;
    }
    
    .summary-item:last-child {
      border-bottom: none;
      font-weight: 700;
      font-size: 1.1rem;
      padding-top: 1rem;
      border-top: 2px solid #e2e8f0;
    }
    
    .loading-spinner {
      width: 1.5rem;
      height: 1.5rem;
      border: 2px solid transparent;
      border-top: 2px solid currentColor;
      border-radius: 50%;
      animation: spin 1s linear infinite;
    }
    
    @keyframes spin {
      0% { transform: rotate(0deg); }
      100% { transform: rotate(360deg); }
    }
    
    .fade-in {
      animation: fadeIn 0.6s ease-out;
    }
    
    @keyframes fadeIn {
      from { opacity: 0; transform: translateY(20px); }
      to { opacity: 1; transform: translateY(0); }
    }
    
    /* Responsive Design */
    @media (max-width: 768px) {
      .container {
        padding: 0 1rem;
      }
      
      .price-display {
        font-size: 2.5rem;
      }
      
      .stat-item {
        padding: 1rem;
      }
      
      .stat-number {
        font-size: 1.5rem;
      }
      
      .btn-primary {
        padding: 1rem 1.5rem;
        font-size: 1rem;
      }
    }
    
    @media (max-width: 640px) {
      .feature-item {
        flex-direction: row;
        align-items: flex-start;
      }
      
      .feature-icon {
        margin-right: 0.75rem;
        width: 2rem;
        height: 2rem;
      }
    }
  </style>
</head>
<body>
  <div class="min-h-screen py-8 md:py-16">
    <div class="container">
      
      <!-- Header -->
      <header class="text-center mb-12 fade-in">
        <div class="badge mb-6">
          <i data-lucide="award" class="w-4 h-4 mr-2"></i>
          Professional Certification
        </div>
        <h1 class="text-4xl md:text-5xl lg:text-6xl font-bold text-gray-900 mb-4">
          Get Your <span class="text-blue-600">Certificate</span>
        </h1>
        <p class="text-xl text-gray-600 max-w-2xl mx-auto">
          Advance your career with industry-recognized certifications trusted by thousands of professionals worldwide.
        </p>
      </header>
      
      
      <!-- Main Content -->
      <div class="grid lg:grid-cols-2 gap-8 lg:gap-12">
        
        <!-- Product Information -->
        <div class="space-y-8">
          
          <!-- Pricing Card -->
          <div class="card p-8 fade-in">
            <div class="text-center mb-8">
              <div class="badge mb-4">
                <i data-lucide="star" class="w-4 h-4 mr-2"></i>
                <%= sub.name %>
              </div>
              <div class="mb-4">
                <span class="price-display">$<%= sub.price %></span>
                <span class="price-currency">USD</span>
              </div>
              <p class="text-gray-600">One-time payment â€¢ Lifetime access</p>
            </div>
            
            <!-- Features -->
            <div class="space-y-0">
              <div class="feature-item">
                <div class="feature-icon">
                  <i data-lucide="award" class="w-5 h-5 text-white"></i>
                </div>
                <div>
                  <h3 class="font-semibold text-gray-900">Certificate Access</h3>
                  <p class="text-gray-600 text-sm"><%= sub.points %> certificates included</p>
                </div>
              </div>
              
              <% if (sub.instructor_id || sub.instructor_name) { %>
              <div class="feature-item">
                <div class="feature-icon">
                  <i data-lucide="user-check" class="w-5 h-5 text-white"></i>
                </div>
                <div>
                  <h3 class="font-semibold text-gray-900">Instructor Support</h3>
                  <p class="text-gray-600 text-sm">Personalized guidance included</p>
                </div>
              </div>
              <% } %>
              
              <% if (sub.center_name) { %>
              <div class="feature-item">
                <div class="feature-icon">
                  <i data-lucide="building" class="w-5 h-5 text-white"></i>
                </div>
                <div>
                  <h3 class="font-semibold text-gray-900">Training Center</h3>
                  <p class="text-gray-600 text-sm">Professional learning environment</p>
                </div>
              </div>
              <% } %>
              
              <div class="feature-item">
                <div class="feature-icon">
                  <i data-lucide="shield-check" class="w-5 h-5 text-white"></i>
                </div>
                <div>
                  <h3 class="font-semibold text-gray-900">Verified Certification</h3>
                  <p class="text-gray-600 text-sm">Industry-recognized credentials</p>
                </div>
              </div>
              
              <div class="feature-item">
                <div class="feature-icon">
                  <i data-lucide="download" class="w-5 h-5 text-white"></i>
                </div>
                <div>
                  <h3 class="font-semibold text-gray-900">Instant Download</h3>
                  <p class="text-gray-600 text-sm">PDF certificates delivered immediately</p>
                </div>
              </div>
            </div>
            
            <!-- Details Link -->
            <% if (sub.details_link) { %>
            <div class="mt-8 pt-6 border-t border-gray-200">
              <a href="<%= sub.details_link %>" 
                 class="inline-flex items-center text-blue-600 hover:text-blue-700 font-medium transition-colors">
                <i data-lucide="info" class="w-4 h-4 mr-2"></i>
                View detailed information
                <i data-lucide="external-link" class="w-4 h-4 ml-2"></i>
              </a>
            </div>
            <% } %>
          </div>
        </div>
        
        <!-- Checkout Form -->
        <div class="fade-in">
          <div class="card p-8">
            <div class="mb-8">
              <h2 class="text-2xl font-bold text-gray-900 mb-2">Complete Your Purchase</h2>
              <p class="text-gray-600">Fill in your details to get started</p>
            </div>
            
            <form id="checkout-form" action="/subscriptions/<%= sub.id %>/checkout" method="post" class="space-y-6">
              <input type="hidden" name="pay_with" id="pay_with" value="">
              
              <!-- Email -->
              <div>
                <label for="email" class="form-label">
                  <i data-lucide="mail" class="w-4 h-4 inline mr-2"></i>
                  Email Address
                </label>
                <input 
                  required 
                  name="email" 
                  id="email" 
                  type="email"
                  class="form-input"
                  placeholder="Enter your email address"
                />
              </div>
              
              <!-- Conditional Fields -->
              <% if (sub.instructor_id) { %>
              <div>
                <label for="instructor_id" class="form-label">
                  <i data-lucide="user" class="w-4 h-4 inline mr-2"></i>
                  Instructor ID
                </label>
                <input 
                  required 
                  name="instructor_id" 
                  id="instructor_id" 
                  type="text"
                  class="form-input"
                  placeholder="Enter instructor ID"
                />
              </div>
              <% } %>
              
              <% if (sub.instructor_name) { %>
              <div>
                <label for="instructor_name" class="form-label">
                  <i data-lucide="user-check" class="w-4 h-4 inline mr-2"></i>
                  Instructor Name
                </label>
                <input 
                  required 
                  name="instructor_name" 
                  id="instructor_name" 
                  type="text"
                  class="form-input"
                  placeholder="Enter instructor name"
                />
              </div>
              <% } %>
              
              <% if (sub.center_name) { %>
              <div>
                <label for="center_name" class="form-label">
                  <i data-lucide="building" class="w-4 h-4 inline mr-2"></i>
                  Training Center Name
                </label>
                <input 
                  required 
                  name="center_name" 
                  id="center_name" 
                  type="text"
                  class="form-input"
                  placeholder="Enter training center name"
                />
              </div>
              <% } %>
              
              <!-- Order Summary -->
              <div class="bg-gray-50 rounded-lg p-6">
                <h3 class="font-semibold text-gray-900 mb-4 flex items-center">
                  <i data-lucide="receipt" class="w-4 h-4 mr-2"></i>
                  Order Summary
                </h3>
                <div class="space-y-3">
                  <div class="summary-item">
                    <span class="text-gray-600">Subscription:</span>
                    <span class="font-medium"><%= sub.name %></span>
                  </div>
                  <div class="summary-item">
                    <span class="text-gray-600">Certificates:</span>
                    <span class="font-medium"><%= sub.points %> included</span>
                  </div>
                  <div class="summary-item">
                    <span class="text-gray-900">Total:</span>
                    <span class="text-blue-600 font-bold">$<%= sub.price %> USD</span>
                  </div>
                </div>
              </div>
              
              <!-- Payment Button -->
              <button 
                type="button" 
                id="payment-btn"
                onclick="handlePayment()"
                class="btn-primary"
              >
                <span id="btn-content">
                  <i data-lucide="shield-check" class="w-5 h-5 inline mr-2"></i>
                  Secure Payment with Stripe
                  <i data-lucide="arrow-right" class="w-5 h-5 inline ml-2"></i>
                </span>
              </button>
              
              <!-- Security Notice -->
              <div class="text-center text-sm text-gray-500 flex items-center justify-center">
                <i data-lucide="shield" class="w-4 h-4 mr-2"></i>
                256-bit SSL encrypted â€¢ Your data is protected
              </div>
            </form>
          </div>
          
          <!-- Support -->
          <div class="mt-8 text-center">
            <p class="text-gray-600 mb-4">Need help? We're here for you 24/7</p>
            <div class="flex justify-center space-x-6">
              <a href="https://wa.me/19848333963" 
                 class="inline-flex items-center text-blue-600 hover:text-blue-700 transition-colors">
                <i data-lucide="message-circle" class="w-4 h-4 mr-2"></i>
                Chat Support
              </a>
              <a href="https://precertificationn.com/no-return-and-refund-policy/" 
                 class="inline-flex items-center text-blue-600 hover:text-blue-700 transition-colors">
                <i data-lucide="file-text" class="w-4 h-4 mr-2"></i>
                Terms & Policy
              </a>
            </div>
          </div>
        </div>
      </div>
    </div>
  </div>

  <script>
    // Initialize Lucide icons
    lucide.createIcons();

    // Form handling
    function handlePayment() {
      const form = document.getElementById('checkout-form');
      const button = document.getElementById('payment-btn');
      const btnContent = document.getElementById('btn-content');
      
      // Validate form
      if (!form.checkValidity()) {
        form.reportValidity();
        return;
      }
      
      // Set payment method
      document.getElementById('pay_with').value = 'stripe';
      
      // Update button state
      button.disabled = true;
      button.style.opacity = '0.8';
      btnContent.innerHTML = `
        <div class="loading-spinner inline-block mr-2"></div>
        Processing Payment...
      `;
      
      // Submit form after delay
      setTimeout(() => {
        btnContent.innerHTML = `
          <i data-lucide="check-circle" class="w-5 h-5 inline mr-2"></i>
          Redirecting to Stripe...
        `;
        lucide.createIcons();
        
        setTimeout(() => {
          form.submit();
        }, 800);
      }, 1500);
    }

    // Form validation and UX improvements
    document.addEventListener('DOMContentLoaded', function() {
      const inputs = document.querySelectorAll('.form-input');
      
      inputs.forEach(input => {
        input.addEventListener('blur', function() {
          if (this.value && !this.checkValidity()) {
            this.style.borderColor = '#ef4444';
          } else if (this.value) {
            this.style.borderColor = '#10b981';
          }
        });
        
        input.addEventListener('input', function() {
          if (this.style.borderColor === 'rgb(239, 68, 68)') {
            this.style.borderColor = '#e2e8f0';
          }
        });
      });
      
      // Animate elements on scroll
      const observerOptions = {
        threshold: 0.1,
        rootMargin: '0px 0px -50px 0px'
      };
      
      const observer = new IntersectionObserver((entries) => {
        entries.forEach(entry => {
          if (entry.isIntersecting) {
            entry.target.style.opacity = '1';
            entry.target.style.transform = 'translateY(0)';
          }
        });
      }, observerOptions);
      
      document.querySelectorAll('.fade-in').forEach(el => {
        el.style.opacity = '0';
        el.style.transform = 'translateY(20px)';
        el.style.transition = 'opacity 0.6s ease, transform 0.6s ease';
        observer.observe(el);
      });
    });

    // Smooth scrolling
    document.documentElement.style.scrollBehavior = 'smooth';
  </script>
</body>
</html>